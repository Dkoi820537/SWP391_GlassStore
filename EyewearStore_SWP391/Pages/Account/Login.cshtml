@page
@model EyewearStore_SWP391.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center" style="min-height: 70vh; align-items: center; padding: 2rem 0;">
    <div class="col-md-6 col-lg-5">
        <div class="card" style="border-radius:20px; overflow:hidden; box-shadow: 0 8px 32px rgba(74,124,126,0.15); border:none;">
            <div style="background: linear-gradient(135deg, var(--color-teal) 0%, var(--color-teal-light) 100%); padding:3rem 2rem; text-align:center; position:relative;">
                <div style="position:absolute; top:-30px; right:-30px; width:120px; height:120px; background: rgba(245,230,211,0.15); border-radius:50%;"></div>
                <div style="position:relative; z-index:1;">
                    <div style="font-size:3.5rem; margin-bottom:1rem;">👓</div>
                    <h3 style="color:white; margin-bottom:0.75rem; font-family:'Playfair Display', serif; font-weight:600; font-size:2rem;">Welcome Back</h3>
                    <p style="color:rgba(255,255,255,0.9); margin:0; font-size:1rem;">Sign in to your OptiPlus account</p>
                </div>
            </div>

            <div class="card-body" style="padding:2.5rem 2rem; background:white;">
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius:10px; padding:1rem 1.25rem;">
                        <strong>✓</strong> @Model.SuccessMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="padding:1rem; background:#f8d7da; border-radius:8px;"></div>

                    <div class="mb-4">
                        <label class="form-label" style="font-weight:600; color:var(--color-teal); display:flex; gap:0.5rem; align-items:center;">
                            <span style="font-size:1.1rem;">📧</span> Email Address
                        </label>
                        <input asp-for="Input.Email" class="form-control" placeholder="your.email@example.com" style="padding:1rem 1.25rem; border-radius:10px; border:2px solid #e0e0e0; font-size:1rem; transition:all .2s;" />
                        <span asp-validation-for="Input.Email" class="text-danger" style="font-size:0.875rem; margin-top:0.25rem;"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label" style="font-weight:600; color:var(--color-teal); display:flex; gap:0.5rem; align-items:center;">
                            <span style="font-size:1.1rem;">🔐</span> Password
                        </label>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" style="padding:1rem 1.25rem; border-radius:10px; border:2px solid #e0e0e0; font-size:1rem; transition:all .2s;" />
                        <span asp-validation-for="Input.Password" class="text-danger" style="font-size:0.875rem; margin-top:0.25rem;"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check" style="padding-left:0; display:flex; align-items:center;">
                            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="rememberMe" style="width:1.25rem; height:1.25rem; margin-right:0.75rem; border-radius:5px; border:2px solid #e0e0e0; accent-color:var(--color-blue-cta);" />
                            <label class="form-check-label" for="rememberMe" style="cursor:pointer; color:#666666; font-size:0.95rem; margin:0;">Remember me for 8 hours</label>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary" style="padding:1.125rem 2rem; font-size:1.05rem; font-weight:600; border-radius:10px; background:linear-gradient(135deg, var(--color-blue-cta) 0%, var(--color-blue-cta-hover) 100%); border:none; text-transform:uppercase; letter-spacing:1px; transition:all .2s;">Sign In</button>
                    </div>

                    <div style="text-align:center; margin:2rem 0; position:relative;">
                        <span style="background:white; padding:0 1rem; color:#999; font-size:0.9rem; position:relative; z-index:1; font-weight:500;">or</span>
                        <div style="position:absolute; top:50%; left:0; right:0; height:1px; background:#e0e0e0; z-index:0;"></div>
                    </div>

                    <div style="text-align:center; padding:1.5rem; background:linear-gradient(135deg, var(--color-peach) 0%, var(--color-peach-light) 100%); border-radius:10px; border:1px solid #e0e0e0;">
                        <span style="color:#4A4A4A; margin-right:0.5rem; font-size:0.95rem;">New to OptiPlus?</span>
                        <a asp-page="/Account/Register" class="text-decoration-none fw-semibold" style="color:var(--color-teal); font-weight:700; font-size:0.95rem;">Create an account →</a>
                    </div>
                </form>
            </div>
        </div>

        <div style="text-align:center; margin-top:1.5rem; color:#666; font-size:0.875rem; display:flex; align-items:center; justify-content:center; gap:0.5rem;">
            <span style="font-size:1.1rem;">🔒</span>
            <span>Your data is secure and encrypted</span>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}