@page
@model EyewearStore_SWP391.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container py-5" style="max-width:600px;">
    <div class="card p-4 shadow-sm">
        <h4 class="mb-3">Bạn có chắc muốn đăng xuất?</h4>
        <p class="text-muted">Bạn sẽ cần đăng nhập lại để truy cập vào các chức năng cá nhân.</p>

        <form method="post">
            <button type="submit" class="btn btn-danger">Đăng xuất</button>
            <a asp-page="/Index" class="btn btn-secondary ms-2">Huỷ</a>
        </form>
    </div>
</div>