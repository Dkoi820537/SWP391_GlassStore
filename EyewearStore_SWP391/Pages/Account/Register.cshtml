@page
@model EyewearStore_SWP391.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center" style="min-height: 70vh; align-items: center; padding: 2rem 0;">
    <div class="col-md-8 col-lg-7">
        <div class="card" style="border-radius:20px; overflow:hidden; box-shadow:0 8px 32px rgba(74,124,126,0.15); border:none;">
            <div style="background: linear-gradient(135deg, var(--color-teal) 0%, var(--color-teal-light) 100%); padding:3rem 2rem; text-align:center; position:relative;">
                <div style="position:absolute; top:-40px; right:-40px; width:150px; height:150px; background:rgba(245,230,211,0.15); border-radius:50%;"></div>
                <div style="position:relative; z-index:1;">
                    <div style="font-size:3.5rem; margin-bottom:1rem;">✨</div>
                    <h3 style="color:white; margin-bottom:0.75rem; font-family:'Playfair Display', serif; font-weight:600; font-size:2rem;">Join OptiPlus</h3>
                    <p style="color:rgba(255,255,255,0.9); margin:0; font-size:1rem;">Create your account and discover perfect eyewear</p>
                </div>
            </div>

            <div class="card-body" style="padding:2.5rem 2rem; background:white;">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="padding:1rem; background:#f8d7da; border-radius:8px;"></div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label" style="font-weight:600; color:var(--color-teal); display:flex; gap:0.5rem; align-items:center;">
                                <span style="font-size:1.1rem;">📧</span> Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" style="padding:1rem 1.25rem; border-radius:10px; border:2px solid #e0e0e0;" />
                            <span asp-validation-for="Input.Email" class="text-danger" style="font-size:0.875rem;"></span>
                            <small class="text-muted" style="font-size:0.8rem; display:block; margin-top:0.35rem; color:#999;">We'll use this for your login</small>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label" style="font-weight:600; color:var(--color-teal); display:flex; gap:0.5rem; align-items:center;">
                                <span style="font-size:1.1rem;">👤</span> Full Name
                            </label>
                            <input asp-for="Input.FullName" class="form-control" placeholder="Enter your full name" style="padding:1rem 1.25rem; border-radius:10px; border:2px solid #e0e0e0;" />
                            <span asp-validation-for="Input.FullName" class="text-danger" style="font-size:0.875rem;"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label" style="font-weight:600; color:var(--color-teal); display:flex; gap:0.5rem; align-items:center;">
                                <span style="font-size:1.1rem;">🔐</span> Password
                            </label>
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Minimum 6 characters" style="padding:1rem 1.25rem; border-radius:10px; border:2px solid #e0e0e0;" />
                            <span asp-validation-for="Input.Password" class="text-danger" style="font-size:0.875rem;"></span>
                            <small class="text-muted" style="font-size:0.8rem; display:block; margin-top:0.35rem; color:#999;">Must be at least 6 characters</small>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label" style="font-weight:600; color:var(--color-teal); display:flex; gap:0.5rem; align-items:center;">
                                <span style="font-size:1.1rem;">📱</span> Phone Number <span style="font-size:0.75rem; color:#999; margin-left:0.25rem;">(Optional)</span>
                            </label>
                            <input asp-for="Input.Phone" class="form-control" placeholder="+84 123 456 789" style="padding:1rem 1.25rem; border-radius:10px; border:2px solid #e0e0e0;" />
                            <span asp-validation-for="Input.Phone" class="text-danger" style="font-size:0.875rem;"></span>
                        </div>
                    </div>

                    <div class="mb-4" style="padding:1.25rem; background:linear-gradient(135deg, var(--color-peach) 0%, var(--color-peach-light) 100%); border-radius:10px; border:1px solid #e0e0e0;">
                        <p style="font-size:0.875rem; color:#4A4A4A; margin:0; line-height:1.6;">
                            By creating an account, you agree to our
                            <a asp-page="/Privacy" style="color:var(--color-teal); text-decoration:none; font-weight:600;">Privacy Policy</a>
                            and
                            <a href="#" style="color:var(--color-teal); text-decoration:none; font-weight:600;">Terms of Service</a>
                        </p>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary" style="padding:1.125rem 2rem; font-size:1.05rem; font-weight:600; border-radius:10px; background:linear-gradient(135deg, var(--color-blue-cta) 0%, var(--color-blue-cta-hover) 100%); border:none; text-transform:uppercase; letter-spacing:1px; transition:all .2s;">Create Account</button>
                    </div>

                    <div style="text-align:center; margin:2rem 0; position:relative;">
                        <span style="background:white; padding:0 1rem; color:#999; font-size:0.9rem; position:relative; z-index:1; font-weight:500;">or</span>
                        <div style="position:absolute; top:50%; left:0; right:0; height:1px; background:#e0e0e0; z-index:0;"></div>
                    </div>

                    <div style="text-align:center; padding:1.5rem; background:linear-gradient(135deg, var(--color-peach) 0%, var(--color-peach-light) 100%); border-radius:10px; border:1px solid #e0e0e0;">
                        <span style="color:#4A4A4A; margin-right:0.5rem; font-size:0.95rem;">Already have an account?</span>
                        <a asp-page="/Account/Login" class="text-decoration-none fw-semibold" style="color:var(--color-teal); font-weight:700; font-size:0.95rem;">Sign in instead →</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Benefits Section left as-is (if you have it), omitted here for brevity -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}