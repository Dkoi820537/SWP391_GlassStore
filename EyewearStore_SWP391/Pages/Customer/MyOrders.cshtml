@page
@model EyewearStore_SWP391.Pages.Customer.MyOrdersModel
@{
    ViewData["Title"] = "My Orders";
    Layout = "_Layout";
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-2">
                    <i class="bi bi-bag-check me-2 text-primary"></i>
                    My Orders
                    @if (Model.Orders.Any())
                    {
                        <span class="badge bg-primary ms-2">@Model.Orders.Count</span>
                    }
                </h2>
                <p class="text-muted mb-0">
                    <i class="bi bi-info-circle me-1"></i>
                    Track the status and history of your orders
                </p>
                @if (!string.IsNullOrEmpty(Model.CurrentUserEmail))
                {
                    <p class="text-muted small mb-0 mt-1">
                        <i class="bi bi-person me-1"></i>
                        Account: <strong>@Model.CurrentUserEmail</strong>
                        @if (!string.IsNullOrEmpty(Model.CurrentUserName))
                        {
                            <span> (@Model.CurrentUserName)</span>
                        }
                    </p>
                }
            </div>
            @if (Model.Orders.Any())
            {
                <div>
                    <a href="/Products" class="btn btn-outline-primary">
                        <i class="bi bi-shop me-1"></i>Continue Shopping
                    </a>
                </div>
            }
        </div>
    </div>

    @if (!Model.Orders.Any())
    {
        <!-- Empty State -->
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-cart-x display-1 text-muted mb-3"></i>
                <h4 class="text-muted">No orders yet</h4>
                <p class="text-muted mb-4">
                    @if (!string.IsNullOrEmpty(Model.CurrentUserEmail))
                    {
                        <span>You haven't placed any orders yet. Start shopping now!</span>
                    }
                    else
                    {
                        <span>Unable to load order information. Please try logging in again.</span>
                    }
                </p>
                <a href="/Products" class="btn btn-primary btn-lg">
                    <i class="bi bi-shop me-2"></i>Shop Now
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Orders List -->
        <div class="row g-4">
            @foreach (var order in Model.Orders)
            {
                <div class="col-12">
                    <div class="card shadow-sm order-card">
                        <div class="card-header bg-white border-bottom">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h5 class="mb-1">
                                        <i class="bi bi-receipt text-primary me-2"></i>
                                        Order #@order.OrderId
                                    </h5>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar-event me-1"></i>
                                        @order.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' HH:mm")
                                    </small>
                                </div>
                                <div class="col-md-6 text-md-end mt-2 mt-md-0">
                                    <span class="badge @MyOrdersModel.GetStatusBadgeClass(order.Status) fs-6 px-3 py-2">
                                        <i class="@MyOrdersModel.GetStatusIcon(order.Status) me-1"></i>
                                        @order.Status
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <!-- Status Progress Bar -->
                            @if (order.Status != "Cancelled")
                            {
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-2">
                                        <small class="text-muted">Order Progress</small>
                                        <small class="fw-semibold">@MyOrdersModel.GetStatusProgress(order.Status)%</small>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                                             role="progressbar"
                                             style="width: @MyOrdersModel.GetStatusProgress(order.Status)%"
                                             aria-valuenow="@MyOrdersModel.GetStatusProgress(order.Status)"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Order Info Grid -->
                            <div class="row mb-3">
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-geo-alt-fill text-primary me-2 mt-1"></i>
                                        <div>
                                            <small class="text-muted d-block">Shipping Address</small>
                                            <span class="fw-semibold">@order.ShippingAddress</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-credit-card text-success me-2 mt-1"></i>
                                        <div>
                                            <small class="text-muted d-block">Payment</small>
                                            <span class="fw-semibold">
                                                @(order.PaymentMethod == "COD" ? "COD (Cash)" : "Bank Transfer")
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-box-seam text-info me-2 mt-1"></i>
                                        <div>
                                            <small class="text-muted d-block">Total Items</small>
                                            <span class="fw-semibold">@order.ItemCount item(s)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Tracking Number -->
                            @if (!string.IsNullOrWhiteSpace(order.TrackingNumber))
                            {
                                <div class="alert alert-info mb-3" role="alert">
                                    <i class="bi bi-truck me-2"></i>
                                    <strong>Tracking Number:</strong>
                                    <span class="font-monospace fw-bold ms-2">@order.TrackingNumber</span>
                                    <button class="btn btn-sm btn-outline-info ms-3" onclick="copyTracking('@order.TrackingNumber')">
                                        <i class="bi bi-clipboard"></i> Copy
                                    </button>
                                </div>
                            }

                            <!-- Product List -->
                            <div class="order-products mb-3">
                                <h6 class="border-bottom pb-2 mb-3">
                                    <i class="bi bi-bag me-2"></i>Products in Order
                                </h6>
                                @foreach (var product in order.Products)
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-light rounded">
                                        <div class="flex-grow-1">
                                            <div class="fw-semibold">@product.Name</div>
                                            <small class="text-muted">
                                                SKU: @product.Sku | Qty: <strong>×@product.Quantity</strong>
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-semibold text-primary">
                                                @String.Format("{0:N0} ₫", product.UnitPrice)
                                            </div>
                                            <small class="text-muted">
                                                = @String.Format("{0:N0} ₫", product.UnitPrice * product.Quantity)
                                            </small>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Order Total -->
                            <div class="d-flex justify-content-between align-items-center border-top pt-3">
                                <h5 class="mb-0">Total:</h5>
                                <h4 class="mb-0 text-success fw-bold">
                                    @String.Format("{0:N0} ₫", order.TotalAmount)
                                </h4>
                            </div>

                            <!-- Action Buttons -->
                            <div class="mt-3 d-flex gap-2 justify-content-end">
                                @if (order.Status == "Pending Confirmation")
                                {
                                    <button class="btn btn-outline-danger" onclick="cancelOrder(@order.OrderId)">
                                        <i class="bi bi-x-circle me-1"></i>Cancel Order
                                    </button>
                                }
                                @if (order.Status == "Delivered" || order.Status == "Completed")
                                {
                                    <button class="btn btn-outline-primary">
                                        <i class="bi bi-arrow-repeat me-1"></i>Reorder
                                    </button>
                                }
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#detailModal@(order.OrderId)">
                                    <i class="bi bi-eye me-1"></i>Details
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Detail Modal -->
                <div class="modal fade" id="detailModal@(order.OrderId)" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">
                                    <i class="bi bi-receipt me-2"></i>Order Details #@order.OrderId
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <strong>Order Date:</strong><br />
                                        @order.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                    <div class="col-6">
                                        <strong>Status:</strong><br />
                                        <span class="badge @MyOrdersModel.GetStatusBadgeClass(order.Status)">
                                            @order.Status
                                        </span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <strong>Shipping Address:</strong><br />
                                    @order.ShippingAddress
                                </div>
                                @if (!string.IsNullOrWhiteSpace(order.TrackingNumber))
                                {
                                    <div class="mb-3">
                                        <strong>Tracking Number:</strong><br />
                                        <code>@order.TrackingNumber</code>
                                    </div>
                                }
                                <hr />
                                <h6>Products:</h6>
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Product Name</th>
                                            <th class="text-center">Qty</th>
                                            <th class="text-end">Unit Price</th>
                                            <th class="text-end">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var p in order.Products)
                                        {
                                            <tr>
                                                <td>
                                                    @p.Name<br />
                                                    <small class="text-muted">@p.Sku</small>
                                                </td>
                                                <td class="text-center">@p.Quantity</td>
                                                <td class="text-end">@String.Format("{0:N0} ₫", p.UnitPrice)</td>
                                                <td class="text-end">@String.Format("{0:N0} ₫", p.UnitPrice * p.Quantity)</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="fw-bold">
                                            <td colspan="3" class="text-end">Total:</td>
                                            <td class="text-end text-success">@String.Format("{0:N0} ₫", order.TotalAmount)</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyTracking(trackingNumber) {
            navigator.clipboard.writeText(trackingNumber).then(function() {
                alert('Tracking number copied: ' + trackingNumber);
            }, function() {
                alert('Unable to copy tracking number');
            });
        }

        function cancelOrder(orderId) {
            if (confirm('Are you sure you want to cancel order #' + orderId + '?')) {
                // TODO: Implement cancel order API call
                alert('Order cancellation feature will be implemented soon');
            }
        }
    </script>
}

@section Styles {
    <style>
        .order-card {
            transition: all 0.3s ease;
        }

            .order-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 16px rgba(0,0,0,0.15) !important;
            }

        .order-products {
            max-height: 300px;
            overflow-y: auto;
        }

        .badge {
            font-weight: 500;
        }

        .progress {
            border-radius: 10px;
        }

        .progress-bar {
            border-radius: 10px;
        }
    </style>
}
