@page
@model EyewearStore_SWP391.Pages.Frames.CreateModel
@{
    ViewData["Title"] = "Create Frame";
    Layout = "_Layout";
}

<style>
    .create-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #1a1a2e;
        margin: 0 0 0.5rem 0;
    }

    .page-header p {
        color: #6c757d;
        margin: 0;
    }

    .breadcrumb {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .breadcrumb a {
        color: #667eea;
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .breadcrumb .separator {
        color: #adb5bd;
    }

    .breadcrumb .current {
        color: #6c757d;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .form-section {
        padding: 2rem;
        border-bottom: 1px solid #f0f0f5;
    }

    .form-section:last-of-type {
        border-bottom: none;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1a1a2e;
        margin: 0 0 1.5rem 0;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #667eea;
        display: inline-block;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-row.single {
        grid-template-columns: 1fr;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-group label {
        font-weight: 600;
        font-size: 0.875rem;
        color: #4a4a68;
        margin-bottom: 0.5rem;
    }

    .form-group label .required {
        color: #dc3545;
    }

    .form-control {
        padding: 0.75rem 1rem;
        border: 1px solid #e0e0e8;
        border-radius: 8px;
        font-size: 0.95rem;
        transition: border-color 0.2s, box-shadow 0.2s;
        width: 100%;
        box-sizing: border-box;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
    }

    .form-control.input-validation-error {
        border-color: #dc3545;
    }

    .form-control.input-validation-error:focus {
        box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.2);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .field-validation-error {
        color: #dc3545;
        font-size: 0.85rem;
        margin-top: 0.35rem;
    }

    .validation-summary-errors {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
        color: #721c24;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 1.5rem;
    }

    .helper-text {
        font-size: 0.8rem;
        color: #6c757d;
        margin-top: 0.35rem;
    }

    /* Image Upload Styles */
    .image-upload-area {
        border: 2px dashed #e0e0e8;
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        background: #fafafa;
        cursor: pointer;
    }

    .image-upload-area:hover,
    .image-upload-area.drag-over {
        border-color: #667eea;
        background: rgba(102, 126, 234, 0.05);
    }

    .image-upload-area .upload-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .image-upload-area h4 {
        margin: 0 0 0.5rem 0;
        color: #4a4a68;
        font-weight: 600;
    }

    .image-upload-area p {
        margin: 0;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .image-upload-area input[type="file"] {
        display: none;
    }

    .image-preview-container {
        display: none;
        margin-top: 1.5rem;
        text-align: center;
    }

    .image-preview-container.has-image {
        display: block;
    }

    .image-preview {
        max-width: 300px;
        max-height: 200px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        object-fit: cover;
    }

    .image-preview-info {
        margin-top: 0.75rem;
        padding: 0.75rem;
        background: #f0f0f5;
        border-radius: 8px;
        display: inline-block;
    }

    .image-preview-info .file-name {
        font-weight: 600;
        color: #4a4a68;
    }

    .image-preview-info .file-size {
        color: #6c757d;
        font-size: 0.85rem;
        margin-left: 0.5rem;
    }

    .btn-remove-image {
        margin-top: 0.75rem;
        background: #dc3545;
        color: white;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.85rem;
        transition: background 0.2s;
    }

    .btn-remove-image:hover {
        background: #c82333;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        padding: 1.5rem 2rem;
        background: #f8f9fc;
        border-top: 1px solid #f0f0f5;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
        font-size: 0.95rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
        background: #f0f0f5;
        color: #4a4a68;
    }

    .btn-secondary:hover {
        background: #e0e0e8;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .create-container {
            padding: 1rem;
        }

        .form-section {
            padding: 1.5rem;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .form-actions {
            flex-direction: column-reverse;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="create-container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb" aria-label="breadcrumb">
        <a href="/">Home</a>
        <span class="separator">‚Ä∫</span>
        <a asp-page="/Frames/Index">Frames</a>
        <span class="separator">‚Ä∫</span>
        <span class="current">Create</span>
    </nav>

    <!-- Page Header -->
    <div class="page-header">
        <h1>üï∂Ô∏è Create Frame</h1>
        <p>Add a new frame product to your inventory</p>
    </div>

    <!-- Form Card -->
    <div class="form-card">
        <form method="post" enctype="multipart/form-data">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <!-- Basic Information Section -->
            <div class="form-section">
                <h2 class="section-title">Basic Information</h2>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.Sku">
                            SKU <span class="required">*</span>
                        </label>
                        <input asp-for="Input.Sku" 
                               class="form-control" 
                               placeholder="e.g., FRAME-TI-001" />
                        <span asp-validation-for="Input.Sku" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Name">
                            Product Name <span class="required">*</span>
                        </label>
                        <input asp-for="Input.Name" 
                               class="form-control" 
                               placeholder="e.g., Classic Titanium Frame" />
                        <span asp-validation-for="Input.Name" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-row single">
                    <div class="form-group">
                        <label asp-for="Input.Description">Description</label>
                        <textarea asp-for="Input.Description" 
                                  class="form-control" 
                                  rows="3"
                                  placeholder="Enter frame description..."></textarea>
                        <span asp-validation-for="Input.Description" class="field-validation-error"></span>
                    </div>
                </div>
            </div>

            <!-- Frame Details Section -->
            <div class="form-section">
                <h2 class="section-title">Frame Details</h2>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.FrameMaterial">Frame Material</label>
                        <input asp-for="Input.FrameMaterial" 
                               class="form-control" 
                               placeholder="e.g., Titanium, Acetate, Metal" />
                        <span asp-validation-for="Input.FrameMaterial" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.FrameType">Frame Type</label>
                        <input asp-for="Input.FrameType" 
                               class="form-control" 
                               placeholder="e.g., Full-Rim, Half-Rim, Rimless" />
                        <span asp-validation-for="Input.FrameType" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.BridgeWidth">Bridge Width</label>
                        <input asp-for="Input.BridgeWidth" 
                               type="number"
                               step="0.01"
                               min="0"
                               class="form-control" 
                               placeholder="e.g., 18.00" />
                        <span class="helper-text">In millimeters</span>
                        <span asp-validation-for="Input.BridgeWidth" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.TempleLength">Temple Length</label>
                        <input asp-for="Input.TempleLength" 
                               type="number"
                               step="0.01"
                               min="0"
                               class="form-control" 
                               placeholder="e.g., 140.00" />
                        <span class="helper-text">In millimeters</span>
                        <span asp-validation-for="Input.TempleLength" class="field-validation-error"></span>
                    </div>
                </div>
            </div>

            <!-- Pricing & Inventory Section -->
            <div class="form-section">
                <h2 class="section-title">Pricing & Inventory</h2>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.Price">
                            Price <span class="required">*</span>
                        </label>
                        <input asp-for="Input.Price" 
                               type="number"
                               step="0.01"
                               min="0.01"
                               class="form-control" 
                               placeholder="0.00" />
                        <span asp-validation-for="Input.Price" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Currency">Currency</label>
                        <input asp-for="Input.Currency" 
                               class="form-control" 
                               maxlength="3"
                               placeholder="USD" />
                        <span class="helper-text">3-character currency code (e.g., USD, VND)</span>
                        <span asp-validation-for="Input.Currency" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.InventoryQty">Inventory Quantity</label>
                        <input asp-for="Input.InventoryQty" 
                               type="number"
                               min="0"
                               class="form-control" 
                               placeholder="0" />
                        <span asp-validation-for="Input.InventoryQty" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <!-- Empty cell for alignment -->
                    </div>
                </div>
            </div>

            <!-- Product Image Section -->
            <div class="form-section">
                <h2 class="section-title">Product Image</h2>

                <div class="form-row single">
                    <div class="form-group">
                        <label id="imageUploadArea" class="image-upload-area" for="imageFileInput">
                            <div class="upload-icon">üì∑</div>
                            <h4>Upload Product Image</h4>
                            <p>Drag and drop an image here, or click to select</p>
                            <p class="helper-text">Supported formats: JPG, JPEG, PNG, WEBP (Max 5 MB)</p>
                            <input type="file" 
                                   id="imageFileInput" 
                                   name="Input.ImageFile" 
                                   accept=".jpg,.jpeg,.png,.webp" />
                        </label>
                        <span asp-validation-for="Input.ImageFile" class="field-validation-error"></span>

                        <div id="imagePreviewContainer" class="image-preview-container">
                            <img id="imagePreview" class="image-preview" src="" alt="Preview" />
                            <div class="image-preview-info">
                                <span id="fileName" class="file-name"></span>
                                <span id="fileSize" class="file-size"></span>
                            </div>
                            <br />
                            <button type="button" id="removeImageBtn" class="btn-remove-image">Remove Image</button>
                        </div>
                    </div>
                </div>

                <div class="form-row single">
                    <div class="form-group">
                        <label asp-for="Input.ImageAltText">Image Alt Text</label>
                        <input asp-for="Input.ImageAltText" 
                               class="form-control" 
                               placeholder="Describe the image for accessibility" />
                        <span class="helper-text">Optional. Used for accessibility and SEO.</span>
                        <span asp-validation-for="Input.ImageAltText" class="field-validation-error"></span>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <a asp-page="/Frames/Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageInput = document.getElementById('imageFileInput');
            const uploadArea = document.getElementById('imageUploadArea');
            const previewContainer = document.getElementById('imagePreviewContainer');
            const imagePreview = document.getElementById('imagePreview');
            const fileName = document.getElementById('fileName');
            const fileSize = document.getElementById('fileSize');
            const removeBtn = document.getElementById('removeImageBtn');

            // Handle file selection
            imageInput.addEventListener('change', function(e) {
                handleFile(e.target.files[0]);
            });

            // Handle drag and drop
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.classList.add('drag-over');
            });

            uploadArea.addEventListener('dragleave', function(e) {
                e.preventDefault();
                uploadArea.classList.remove('drag-over');
            });

            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.classList.remove('drag-over');
                const file = e.dataTransfer.files[0];
                if (file && isValidImageFile(file)) {
                    imageInput.files = e.dataTransfer.files;
                    handleFile(file);
                }
            });

            // Remove image button
            removeBtn.addEventListener('click', function() {
                imageInput.value = '';
                previewContainer.classList.remove('has-image');
                imagePreview.src = '';
                fileName.textContent = '';
                fileSize.textContent = '';
            });

            function handleFile(file) {
                if (!file) return;

                if (!isValidImageFile(file)) {
                    alert('Invalid file type. Please select a JPG, JPEG, PNG, or WEBP image.');
                    return;
                }

                if (file.size > 5 * 1024 * 1024) {
                    alert('File size exceeds 5 MB limit.');
                    return;
                }

                // Show preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    imagePreview.src = e.target.result;
                    previewContainer.classList.add('has-image');
                    fileName.textContent = file.name;
                    fileSize.textContent = formatFileSize(file.size);
                };
                reader.readAsDataURL(file);
            }

            function isValidImageFile(file) {
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
                return allowedTypes.includes(file.type);
            }

            function formatFileSize(bytes) {
                if (bytes < 1024) return bytes + ' B';
                if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
                return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
            }
        });
    </script>
}
