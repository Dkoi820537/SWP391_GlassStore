@page "{id:int}"
@model EyewearStore_SWP391.Pages.Frames.DeleteModel
@{
    ViewData["Title"] = "Delete Frame";
    Layout = "_Layout";
}

<style>
    .delete-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #1a1a2e;
        margin: 0;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
        font-size: 0.95rem;
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
        color: white;
    }

    .btn-secondary {
        background: #f0f0f5;
        color: #4a4a68;
    }

    .btn-secondary:hover {
        background: #e0e0e8;
        color: #4a4a68;
    }

    /* Delete Card */
    .delete-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 2px solid #dc3545;
    }

    .delete-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 1.5rem 2rem;
        text-align: center;
    }

    .delete-header h2 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .delete-body {
        padding: 2rem;
    }

    .warning-icon {
        font-size: 4rem;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .warning-message {
        text-align: center;
        font-size: 1.25rem;
        font-weight: 600;
        color: #dc3545;
        margin-bottom: 2rem;
    }

    /* Error Alert */
    .error-alert {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .error-alert i {
        font-size: 1.25rem;
    }

    /* Frame Details */
    .frame-details {
        background: #f8f9fc;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .frame-details h3 {
        font-size: 1rem;
        font-weight: 700;
        color: #4a4a68;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e0e0e8;
    }

    .frame-details dl {
        display: grid;
        grid-template-columns: 150px 1fr;
        gap: 0.75rem 1.5rem;
        margin: 0;
    }

    .frame-details dt {
        font-weight: 600;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .frame-details dd {
        margin: 0;
        color: #1a1a2e;
        font-size: 0.95rem;
    }

    .sku-badge {
        font-family: 'Courier New', monospace;
        background: #e8eaff;
        color: #667eea;
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
    }

    .price-value {
        font-weight: 700;
        color: #28a745;
    }

    .material-badge {
        display: inline-block;
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 500;
        background: #fff3cd;
        color: #856404;
    }

    .type-badge {
        display: inline-block;
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 500;
        background: #d1ecf1;
        color: #0c5460;
    }

    .na-text {
        color: #6c757d;
        font-style: italic;
    }

    /* Warning Box */
    .warning-box {
        background: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        text-align: center;
    }

    .warning-box strong {
        display: block;
        margin-bottom: 0.25rem;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .action-buttons .btn {
        min-width: 150px;
        justify-content: center;
    }

    /* Delete Footer */
    .delete-footer {
        background: #f8f9fc;
        padding: 1rem 2rem;
        text-align: center;
        color: #6c757d;
        font-size: 0.875rem;
        border-top: 1px solid #e0e0e8;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .delete-container {
            padding: 1rem;
        }

        .frame-details dl {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }

        .frame-details dt {
            margin-top: 0.5rem;
        }

        .frame-details dt:first-child {
            margin-top: 0;
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-buttons .btn {
            width: 100%;
        }
    }

    /* Animation */
    .delete-card {
        animation: slideIn 0.3s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="delete-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1>üóëÔ∏è Delete Frame</h1>
        <a asp-page="./Index" class="btn btn-secondary">
            ‚Üê Back to List
        </a>
    </div>

    <!-- Delete Card -->
    <div class="delete-card">
        <div class="delete-header">
            <h2>
                <span>‚ö†Ô∏è</span>
                Delete Confirmation
            </h2>
        </div>

        <div class="delete-body">
            <!-- Error Message Alert -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-alert">
                    <span>‚ùå</span>
                    <span>@Model.ErrorMessage</span>
                </div>
            }

            <!-- Warning Icon -->
            <div class="warning-icon">üóëÔ∏è</div>

            <!-- Warning Message -->
            <p class="warning-message">Are you sure you want to delete this frame?</p>

            <!-- Frame Details -->
            <div class="frame-details">
                <h3>üì¶ Frame Details</h3>
                <dl>
                    <dt>SKU</dt>
                    <dd><span class="sku-badge">@Model.Frame.Sku</span></dd>

                    <dt>Name</dt>
                    <dd><strong>@Model.Frame.Name</strong></dd>

                    <dt>Description</dt>
                    <dd>
                        @if (!string.IsNullOrEmpty(Model.Frame.Description))
                        {
                            @Model.Frame.Description
                        }
                        else
                        {
                            <span class="na-text">N/A</span>
                        }
                    </dd>

                    <dt>Price</dt>
                    <dd>
                        <span class="price-value">@Model.Frame.Price.ToString("N0")</span>
                        <span>@Model.Frame.Currency</span>
                    </dd>

                    <dt>Frame Material</dt>
                    <dd>
                        @if (!string.IsNullOrEmpty(Model.Frame.FrameMaterial))
                        {
                            <span class="material-badge">@Model.Frame.FrameMaterial</span>
                        }
                        else
                        {
                            <span class="na-text">N/A</span>
                        }
                    </dd>

                    <dt>Frame Type</dt>
                    <dd>
                        @if (!string.IsNullOrEmpty(Model.Frame.FrameType))
                        {
                            <span class="type-badge">@Model.Frame.FrameType</span>
                        }
                        else
                        {
                            <span class="na-text">N/A</span>
                        }
                    </dd>
                </dl>
            </div>

            <!-- Warning Box -->
            <div class="warning-box">
                <strong>‚ö†Ô∏è Warning</strong>
                This action will deactivate the frame. The data will be preserved but the frame will no longer be visible in active listings.
            </div>

            <!-- Action Form -->
            <form method="post">
                <input type="hidden" asp-for="Frame.ProductId" />
                
                <div class="action-buttons">
                    <button type="submit" class="btn btn-danger" id="deleteButton">
                        üóëÔ∏è Delete Frame
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        ‚Üê Cancel
                    </a>
                </div>
            </form>
        </div>

        <div class="delete-footer">
            üõ°Ô∏è This is a soft delete operation. The frame can be reactivated if needed.
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Double confirmation for delete action
        document.getElementById('deleteButton').addEventListener('click', function(e) {
            e.preventDefault();

            if (confirm('‚ö†Ô∏è FINAL CONFIRMATION: Are you sure you want to delete "' + '@Model.Frame.Name.Replace("'", "\\'")' + '"?\n\nThis will deactivate the frame from active listings.')) {
                this.closest('form').submit();
            }
        });
    </script>
}
