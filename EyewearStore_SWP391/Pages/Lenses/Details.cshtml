@page
@model EyewearStore_SWP391.Pages.Lenses.DetailsModel
@{
    ViewData["Title"] = "Lens Details";
    Layout = "_Layout";
}

<style>
    .details-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #1a1a2e;
        margin: 0 0 0.5rem 0;
    }

    .breadcrumb {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .breadcrumb a {
        color: #667eea;
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .breadcrumb .separator {
        color: #adb5bd;
    }

    .breadcrumb .current {
        color: #6c757d;
    }

    .detail-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .detail-section {
        padding: 2rem;
        border-bottom: 1px solid #f0f0f5;
    }

    .detail-section:last-child {
        border-bottom: none;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1a1a2e;
        margin: 0 0 1.5rem 0;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #667eea;
        display: inline-block;
    }

    .detail-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .detail-label {
        font-weight: 600;
        font-size: 0.875rem;
        color: #6c757d;
    }

    .detail-value {
        font-size: 1rem;
        color: #1a1a2e;
    }

    .detail-value.empty {
        color: #adb5bd;
        font-style: italic;
    }

    .sku-badge {
        font-family: 'Courier New', monospace;
        background: #e8eaff;
        color: #667eea;
        padding: 0.35rem 0.75rem;
        border-radius: 6px;
        font-size: 0.95rem;
        font-weight: 600;
        display: inline-block;
    }

    .status-badge {
        display: inline-block;
        padding: 0.35rem 0.85rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-active {
        background: #d4edda;
        color: #155724;
    }

    .status-inactive {
        background: #f8d7da;
        color: #721c24;
    }

    .prescription-badge {
        display: inline-block;
        padding: 0.35rem 0.85rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .prescription-yes {
        background: #d1ecf1;
        color: #0c5460;
    }

    .prescription-no {
        background: #f0f0f5;
        color: #6c757d;
    }

    .product-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .no-image {
        background: #f0f0f5;
        border-radius: 8px;
        padding: 3rem;
        text-align: center;
        color: #adb5bd;
    }

    .no-image-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
        font-size: 0.95rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-warning {
        background: #ffc107;
        color: #212529;
    }

    .btn-warning:hover {
        background: #e0a800;
    }

    .btn-danger {
        background: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background: #c82333;
    }

    .btn-secondary {
        background: #f0f0f5;
        color: #4a4a68;
    }

    .btn-secondary:hover {
        background: #e0e0e8;
    }

    @@media (max-width: 768px) {
        .details-container {
            padding: 1rem;
        }

        .detail-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="details-container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb" aria-label="breadcrumb">
        <a href="/">Home</a>
        <span class="separator">â€º</span>
        <a asp-page="/Lenses/Index">Lenses</a>
        <span class="separator">â€º</span>
        <span class="current">Details</span>
    </nav>

    <!-- Page Header -->
    <div class="page-header">
        <h1>ðŸ‘“ Lens Details</h1>
    </div>

    <!-- Lens Details Card -->
    <div class="detail-card">
        <!-- Product Image Section -->
        @if (!string.IsNullOrEmpty(Model.Lens.PrimaryImageUrl))
        {
            <div class="detail-section">
                <img src="@Model.Lens.PrimaryImageUrl" 
                     alt="@Model.Lens.Name" 
                     class="product-image" />
            </div>
        }
        else if (Model.ProductImages.Any())
        {
            <div class="detail-section">
                <img src="@Model.ProductImages.First().ImageUrl" 
                     alt="@Model.Lens.Name" 
                     class="product-image" />
            </div>
        }
        else
        {
            <div class="detail-section">
                <div class="no-image">
                    <div class="no-image-icon">ðŸ“·</div>
                    <p>No product image available</p>
                </div>
            </div>
        }

        <!-- Basic Information -->
        <div class="detail-section">
            <h2 class="section-title">Product Information</h2>
            
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">SKU</span>
                    <span class="detail-value">
                        <span class="sku-badge">@Model.Lens.Sku</span>
                    </span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Status</span>
                    <span class="detail-value">
                        @if (Model.Lens.IsActive)
                        {
                            <span class="status-badge status-active">Active</span>
                        }
                        else
                        {
                            <span class="status-badge status-inactive">Inactive</span>
                        }
                    </span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Product Name</span>
                    <span class="detail-value">@Model.Lens.Name</span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Product Type</span>
                    <span class="detail-value">@Model.Lens.ProductType</span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Price</span>
                    <span class="detail-value">@Model.Lens.Price.ToString("N0") @Model.Lens.Currency</span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Inventory Quantity</span>
                    <span class="detail-value">
                        @{
                            var stock = Model.Lens.InventoryQty ?? 0;
                            var stockClass = stock > 10 ? "text-success" : stock > 0 ? "text-warning" : "text-danger";
                        }
                        <span class="@stockClass">@stock units</span>
                    </span>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Lens.Description))
            {
                <div class="detail-item" style="margin-top: 1.5rem;">
                    <span class="detail-label">Description</span>
                    <span class="detail-value">@Model.Lens.Description</span>
                </div>
            }
        </div>

        <!-- Lens Details -->
        <div class="detail-section">
            <h2 class="section-title">Lens Details</h2>
            
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Lens Type</span>
                    @if (!string.IsNullOrEmpty(Model.Lens.LensType))
                    {
                        <span class="detail-value">@Model.Lens.LensType</span>
                    }
                    else
                    {
                        <span class="detail-value empty">Not specified</span>
                    }
                </div>

                <div class="detail-item">
                    <span class="detail-label">Lens Index</span>
                    @if (Model.Lens.LensIndex.HasValue)
                    {
                        <span class="detail-value">@Model.Lens.LensIndex.Value.ToString("F2")</span>
                    }
                    else
                    {
                        <span class="detail-value empty">Not specified</span>
                    }
                </div>

                <div class="detail-item">
                    <span class="detail-label">Prescription Required</span>
                    <span class="detail-value">
                        @if (Model.Lens.IsPrescription)
                        {
                            <span class="prescription-badge prescription-yes">Required</span>
                        }
                        else
                        {
                            <span class="prescription-badge prescription-no">Not Required</span>
                        }
                    </span>
                </div>
            </div>
        </div>

        <!-- Timestamps -->
        <div class="detail-section">
            <h2 class="section-title">Record Information</h2>
            
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Created At</span>
                    <span class="detail-value">@Model.Lens.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Last Updated</span>
                    <span class="detail-value">@Model.Lens.UpdatedAt.ToString("MMM dd, yyyy hh:mm tt")</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a asp-page="/Lenses/Index" class="btn btn-secondary">Back to List</a>
        <a asp-page="/Lenses/Edit" asp-route-id="@Model.Lens.ProductId" class="btn btn-warning">Edit</a>
        <a asp-page="/Lenses/Delete" asp-route-id="@Model.Lens.ProductId" class="btn btn-danger">Delete</a>
    </div>
</div>
