@page
@model EyewearStore_SWP391.Pages.Manager.ReturnsModel
@{
    ViewData["Title"] = "Return Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 style="font-family: var(--font-secondary); color: var(--primary-navy); font-size: 2rem; margin-bottom: 0.5rem;">
                📦 Return Management
            </h1>
            <p style="color: var(--secondary-warm-gray); margin: 0;">Review and process customer returns</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card" style="border: none; border-radius: 12px; background: linear-gradient(135deg, #ff9800 0%, #ffb74d 100%); color: white;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 style="opacity: 0.9; margin-bottom: 0.5rem;">Pending</h6>
                            <h2 style="margin: 0; font-weight: 700;">@Model.PendingCount</h2>
                        </div>
                        <i class="bi bi-hourglass-split" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="border: none; border-radius: 12px; background: linear-gradient(135deg, #4caf50 0%, #81c784 100%); color: white;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 style="opacity: 0.9; margin-bottom: 0.5rem;">Approved</h6>
                            <h2 style="margin: 0; font-weight: 700;">@Model.ApprovedCount</h2>
                        </div>
                        <i class="bi bi-check-circle" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="border: none; border-radius: 12px; background: linear-gradient(135deg, #f44336 0%, #ef5350 100%); color: white;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 style="opacity: 0.9; margin-bottom: 0.5rem;">Rejected</h6>
                            <h2 style="margin: 0; font-weight: 700;">@Model.RejectedCount</h2>
                        </div>
                        <i class="bi bi-x-circle" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="border: none; border-radius: 12px; background: linear-gradient(135deg, var(--primary-navy) 0%, var(--primary-navy-light) 100%); color: white;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 style="opacity: 0.9; margin-bottom: 0.5rem;">Total Returns</h6>
                            <h2 style="margin: 0; font-weight: 700;">@Model.TotalReturns</h2>
                        </div>
                        <i class="bi bi-arrow-repeat" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4" style="border: none; border-radius: 12px; box-shadow: var(--shadow-sm);">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a asp-page="/Manager/Returns" asp-route-filter="All"
                   class="btn @(Model.CurrentFilter == "All" ? "btn-primary" : "btn-outline-primary")">
                    All (@Model.TotalReturns)
                </a>
                <a asp-page="/Manager/Returns" asp-route-filter="Pending"
                   class="btn @(Model.CurrentFilter == "Pending" ? "btn-primary" : "btn-outline-primary")">
                    Pending (@Model.PendingCount)
                </a>
                <a asp-page="/Manager/Returns" asp-route-filter="Approved"
                   class="btn @(Model.CurrentFilter == "Approved" ? "btn-primary" : "btn-outline-primary")">
                    Approved (@Model.ApprovedCount)
                </a>
                <a asp-page="/Manager/Returns" asp-route-filter="Rejected"
                   class="btn @(Model.CurrentFilter == "Rejected" ? "btn-primary" : "btn-outline-primary")">
                    Rejected (@Model.RejectedCount)
                </a>
            </div>
        </div>
    </div>

    <!-- Returns Table -->
    <div class="card" style="border: none; border-radius: 12px; box-shadow: var(--shadow-md);">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background: var(--light-gray);">
                        <tr>
                            <th style="padding: 1rem;">Return ID</th>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>Type</th>
                            <th>Reason</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Returns.Any())
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5">
                                    <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                                    <p class="mt-3 text-muted">No returns found</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var ret in Model.Returns)
                            {
                                <tr>
                                    <td style="padding: 1rem;">
                                        <strong>#@ret.ReturnId</strong>
                                        <br />
                                        <small class="text-muted">Order #@ret.OrderId</small>
                                    </td>
                                    <td>
                                        <strong>@ret.CustomerName</strong>
                                        <br />
                                        <small class="text-muted">@ret.CustomerEmail</small>
                                    </td>
                                    <td>
                                        <strong>@ret.ProductName</strong>
                                        <br />
                                        <small class="text-muted">SKU: @ret.Sku · Qty: @ret.Quantity</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@ret.ReturnType</span>
                                    </td>
                                    <td>
                                        <strong>@ret.ReasonCategory</strong>
                                        @if (!string.IsNullOrEmpty(ret.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@(ret.Description.Length > 50 ? ret.Description.Substring(0, 50) + "..." : ret.Description)</small>
                                        }
                                    </td>
                                    <td>
                                        <strong style="color: var(--primary-gold);">@ret.RefundAmount.ToString("N0") VND</strong>
                                    </td>
                                    <td>
                                        @ret.CreatedAt.ToString("MMM dd, yyyy")
                                        <br />
                                        <small class="text-muted">@ret.DaysAgo days ago</small>
                                    </td>
                                    <td>
                                        @if (ret.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split me-1"></i>Pending
                                            </span>
                                        }
                                        else if (ret.Status == "Approved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Approved
                                            </span>
                                        }
                                        else if (ret.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i>Rejected
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@ret.Status</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (ret.Status == "Pending")
                                        {
                                            <div class="btn-group btn-group-sm">
                                                <form method="post" asp-page-handler="QuickApprove" style="display: inline;">
                                                    <input type="hidden" name="returnId" value="@ret.ReturnId" />
                                                    <button type="submit" class="btn btn-success" onclick="return confirm('Approve this return?')">
                                                        <i class="bi bi-check"></i>
                                                    </button>
                                                </form>
                                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal@(ret.ReturnId)">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                                <a asp-page="/Manager/ReturnDetails" asp-route-id="@ret.ReturnId" class="btn btn-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>

                                            <!-- Reject Modal -->
                                            <div class="modal fade" id="rejectModal@(ret.ReturnId)" tabindex="-1">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <form method="post" asp-page-handler="QuickReject">
                                                            <input type="hidden" name="returnId" value="@ret.ReturnId" />
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Reject Return #@ret.ReturnId</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="mb-3">
                                                                    <label class="form-label">Rejection Reason</label>
                                                                    <textarea name="reason" class="form-control" rows="3" required placeholder="Please provide a reason..."></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="submit" class="btn btn-danger">Reject Return</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <a asp-page="/Manager/ReturnDetails" asp-route-id="@ret.ReturnId" class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye me-1"></i>View
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
    }
</style>
