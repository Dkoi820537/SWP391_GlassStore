@page "{id:int}"
@model EyewearStore_SWP391.Pages.Products.LensDetailsModel
@{
    ViewData["Title"] = Model.Lens?.Name ?? "Lens Details";
    Layout = "_Layout";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/shop.css" asp-append-version="true" />
    <style>
        /* ==========================================
                   LENS DETAILS PAGE STYLES
                   ========================================== */

        .lens-breadcrumb-section {
            background: #F8F9FA;
            padding: 16px 0;
        }

        .lens-breadcrumb {
            display: flex;
            align-items: center;
            list-style: none;
            padding: 0;
            margin: 0;
            font-size: 14px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 24px;
        }

            .lens-breadcrumb li {
                display: flex;
                align-items: center;
            }

            .lens-breadcrumb a {
                color: #666666;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .lens-breadcrumb a:hover {
                    color: var(--shop-primary-teal);
                }

            .lens-breadcrumb .separator {
                margin: 0 8px;
                color: #999999;
                font-size: 12px;
            }

            .lens-breadcrumb .current {
                color: var(--shop-primary-teal);
                font-weight: 500;
            }

        .lens-details-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 24px;
            background: var(--shop-white);
        }

        .lens-details-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 48px;
        }

        .lens-gallery {
            position: relative;
        }

        .main-image-container {
            aspect-ratio: 1;
            background: var(--shop-white);
            border-radius: 12px;
            border: 1px solid #E0E0E0;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .main-image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: opacity 0.3s ease;
            }

        .main-image-placeholder {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

            .main-image-placeholder i {
                font-size: 120px;
                color: var(--shop-primary-teal);
                opacity: 0.3;
            }

        .thumbnail-gallery {
            display: flex;
            gap: 12px;
            margin-top: 16px;
            flex-wrap: wrap;
        }

        .thumbnail-item {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            overflow: hidden;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

            .thumbnail-item:hover, .thumbnail-item.active {
                border-color: var(--shop-primary-teal);
            }

            .thumbnail-item img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .lens-info {
            padding-top: 16px;
        }

        .lens-name {
            font-size: 32px;
            font-weight: 700;
            color: #333333;
            margin: 0 0 12px;
            line-height: 1.3;
        }

        .lens-sku {
            font-size: 14px;
            color: #666666;
            margin-bottom: 16px;
        }

        .lens-price {
            font-size: 36px;
            font-weight: 700;
            color: var(--shop-primary-teal);
            margin-bottom: 24px;
            display: flex;
            align-items: baseline;
            gap: 8px;
        }

            .lens-price .currency {
                font-size: 24px;
            }

        .stock-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 16px;
            border-radius: 16px;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 24px;
        }

            .stock-badge.in-stock {
                background: #28A745;
                color: white;
            }

            .stock-badge.low-stock {
                background: #FFA500;
                color: white;
            }

            .stock-badge.out-of-stock {
                background: #DC3545;
                color: white;
            }

        .prescription-info {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 16px;
            border-radius: 16px;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 24px;
            margin-left: 8px;
        }

            .prescription-info.required {
                background: #d1ecf1;
                color: #0c5460;
            }

            .prescription-info.not-required {
                background: #f0f0f5;
                color: #6c757d;
            }

        .lens-description-box {
            margin: 24px 0;
            padding: 24px;
            background: #F5E6D3;
            border-radius: 12px;
        }

            .lens-description-box p {
                font-size: 16px;
                line-height: 1.6;
                color: #333333;
                margin: 0;
            }

        .specs-section {
            margin: 24px 0;
        }

        .specs-heading {
            font-size: 20px;
            font-weight: 600;
            color: var(--shop-primary-teal);
            margin: 0 0 16px;
        }

        .specs-table {
            width: 100%;
        }

        .specs-row {
            display: flex;
            padding: 12px 0;
            border-bottom: 1px solid #E0E0E0;
        }

            .specs-row:last-child {
                border-bottom: none;
            }

        .specs-label {
            width: 140px;
            font-weight: 600;
            color: #333333;
            flex-shrink: 0;
        }

        .specs-value {
            color: #666666;
            flex: 1;
        }

        .quantity-section {
            margin-top: 32px;
        }

        .quantity-label {
            font-weight: 600;
            color: #333333;
            margin-bottom: 8px;
            display: block;
        }

        .quantity-input-wrapper {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .quantity-btn {
            width: 40px;
            height: 48px;
            border: 2px solid #E0E0E0;
            background: var(--shop-white);
            border-radius: 8px;
            font-size: 20px;
            font-weight: 600;
            color: var(--shop-primary-teal);
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .quantity-btn:hover:not(:disabled) {
                border-color: var(--shop-primary-teal);
                background: var(--shop-warm-peach-light);
            }

            .quantity-btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .quantity-input {
            width: 80px;
            height: 48px;
            border: 2px solid #E0E0E0;
            border-radius: 8px;
            font-size: 16px;
            text-align: center;
            font-weight: 600;
        }

            .quantity-input:focus {
                outline: none;
                border-color: var(--shop-primary-teal);
            }

        .btn-add-to-cart {
            margin-top: 24px;
            width: 100%;
            background: #0066CC;
            color: white;
            font-size: 18px;
            font-weight: 600;
            padding: 16px 32px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .btn-add-to-cart:hover:not(:disabled) {
                background: #0052A3;
                transform: translateY(-2px);
            }

            .btn-add-to-cart:active:not(:disabled) {
                transform: translateY(0);
                background: #003d7a;
            }

            .btn-add-to-cart:disabled {
                background: #CCCCCC;
                cursor: not-allowed;
                transform: none;
            }

        .btn-add-wishlist {
            margin-top: 12px;
            width: 100%;
            background: white;
            color: var(--shop-primary-teal);
            font-size: 16px;
            font-weight: 600;
            padding: 14px 32px;
            border-radius: 8px;
            border: 2px solid var(--shop-primary-teal);
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .btn-add-wishlist:hover:not(:disabled) {
                background: #F5E6D3;
            }

            .btn-add-wishlist:disabled {
                opacity: 0.7;
                cursor: not-allowed;
            }

        .error-alert {
            background: #FFF5F5;
            border: 1px solid #DC3545;
            border-radius: 8px;
            padding: 12px 16px;
            margin-bottom: 16px;
            color: #DC3545;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .success-alert {
            background: #F0FFF4;
            border: 1px solid #28A745;
            border-radius: 8px;
            padding: 12px 16px;
            margin-bottom: 16px;
            color: #28A745;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .details-tabs-section {
            margin-top: 48px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            padding: 0 24px;
        }

        .tabs-header {
            display: flex;
            border-bottom: 1px solid #E0E0E0;
            gap: 4px;
        }

        .tab-button {
            padding: 16px 24px;
            background: transparent;
            border: none;
            font-size: 16px;
            font-weight: 500;
            color: var(--shop-primary-teal);
            cursor: pointer;
            position: relative;
            transition: all 0.3s ease;
        }

            .tab-button:hover {
                background: var(--shop-warm-peach-light);
            }

            .tab-button.active {
                font-weight: 600;
            }

                .tab-button.active::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    right: 0;
                    height: 3px;
                    background: var(--shop-primary-teal);
                }

        .tab-content {
            display: none;
            background: var(--shop-white);
            padding: 32px;
            border-radius: 0 0 12px 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

            .tab-content.active {
                display: block;
            }

            .tab-content h3 {
                font-size: 18px;
                font-weight: 600;
                color: var(--shop-primary-teal);
                margin: 0 0 16px;
            }

            .tab-content p {
                color: #666666;
                line-height: 1.8;
                margin: 0;
            }

        .care-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .care-list li {
                padding: 12px 0;
                padding-left: 32px;
                position: relative;
                color: #666666;
                border-bottom: 1px solid #E0E0E0;
            }

                .care-list li:last-child {
                    border-bottom: none;
                }

                .care-list li::before {
                    content: '\F26A';
                    font-family: 'bootstrap-icons';
                    position: absolute;
                    left: 0;
                    color: var(--shop-primary-teal);
                }

        .related-products-section {
            margin-top: 64px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            padding: 0 24px 48px;
        }

        .related-heading {
            text-align: center;
            font-size: 28px;
            font-weight: 700;
            color: var(--shop-primary-teal);
            margin: 0 0 32px;
        }

        .related-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 24px;
        }

        .related-card {
            background: var(--shop-white);
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .related-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
            }

        .related-card-image {
            aspect-ratio: 1;
            background: var(--shop-light-gray);
            overflow: hidden;
        }

            .related-card-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

        .related-card:hover .related-card-image img {
            transform: scale(1.05);
        }

        .related-card-image-placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .related-card-image-placeholder i {
                font-size: 40px;
                color: var(--shop-text-muted);
                opacity: 0.5;
            }

        .related-card-info {
            padding: 16px;
        }

        .related-card-name {
            font-size: 14px;
            font-weight: 600;
            color: #333333;
            margin: 0 0 8px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .related-card-price {
            font-size: 16px;
            font-weight: 700;
            color: var(--shop-primary-teal);
        }

        .related-card-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .mobile-sticky-bar {
            display: none;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: white;
            box-shadow: 0 -4px 16px rgba(0, 0, 0, 0.1);
            padding: 12px 16px;
            z-index: 1000;
        }

        .mobile-sticky-content {
            display: flex;
            align-items: center;
            gap: 12px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .mobile-price {
            font-size: 18px;
            font-weight: 700;
            color: var(--shop-primary-teal);
        }

        .mobile-add-btn {
            flex: 1;
            background: #0066CC;
            color: white;
            font-size: 14px;
            font-weight: 600;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

        @@media (max-width: 991px) {
            .lens-details-grid {
                grid-template-columns: 1fr;
                gap: 32px;
            }

            .related-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .mobile-sticky-bar {
                display: block;
            }

            .lens-details-container {
                padding-bottom: 100px;
            }
        }

        @@media (max-width: 576px) {
            .lens-name {
                font-size: 24px;
            }

            .lens-price {
                font-size: 28px;
            }

                .lens-price .currency {
                    font-size: 18px;
                }

            .related-grid {
                grid-template-columns: 1fr;
            }

            .tabs-header {
                flex-wrap: wrap;
            }

            .tab-button {
                flex: 1;
                min-width: 100px;
                text-align: center;
                padding: 12px 16px;
                font-size: 14px;
            }
        }
    </style>
}

<!-- Breadcrumb -->
<div class="lens-breadcrumb-section">
    <ol class="lens-breadcrumb">
        <li><a asp-page="/Index">Home</a></li>
        <li><span class="separator"><i class="bi bi-chevron-right"></i></span></li>
        <li><a asp-page="/Products/Index">Shop</a></li>
        <li><span class="separator"><i class="bi bi-chevron-right"></i></span></li>
        <li><a asp-page="/Products/Index" asp-route-productType="Lenses">Lenses</a></li>
        <li><span class="separator"><i class="bi bi-chevron-right"></i></span></li>
        <li><span class="current">@Model.Lens?.Name</span></li>
    </ol>
</div>

@if (Model.Lens != null)
{
    <div class="lens-details-container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="success-alert">
                <i class="bi bi-check-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-alert">
                <i class="bi bi-exclamation-circle"></i>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="error-alert">
                <i class="bi bi-exclamation-circle"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <div class="lens-details-grid">
            <!-- Left Column - Images -->
            <div class="lens-gallery">
                <div class="main-image-container">
                    @if (!string.IsNullOrEmpty(Model.Lens.PrimaryImageUrl))
                    {
                        <img id="mainProductImage" src="@Model.Lens.PrimaryImageUrl" alt="@Model.Lens.Name" />
                    }
                    else
                    {
                        <div class="main-image-placeholder">
                            <i class="bi bi-eyeglasses"></i>
                        </div>
                    }
                </div>

                @if (Model.Lens.Images.Count > 1)
                {
                    <div class="thumbnail-gallery">
                        @foreach (var image in Model.Lens.Images)
                        {
                            <div class="thumbnail-item @(image.IsPrimary ? "active" : "")"
                                 onclick="changeMainImage('@image.ImageUrl', this)">
                                <img src="@image.ImageUrl" alt="@(image.AltText ?? Model.Lens.Name)" />
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Right Column - Product Information -->
            <div class="lens-info">
                <h1 class="lens-name">@Model.Lens.Name</h1>

                <p class="lens-sku">SKU: @Model.Lens.Sku</p>

                <div class="lens-price">
                    <span class="currency">@Model.Lens.Currency</span>
                    <span>@Model.Lens.Price.ToString("N0")</span>
                </div>

                @if (Model.Lens.IsPrescription && Model.Lens.PrescriptionFee > 0)
                {
                    <p class="lens-price-with-rx" style="font-size: 16px; color: #666; margin: -8px 0 24px 0;">
                        From @Model.Lens.Price.ToString("N0") VND ¬∑ <strong>+ @Model.Lens.PrescriptionFee.ToString("N0") VND</strong> with prescription
                    </p>
                }

                <!-- Stock Status Badge -->
                <div class="stock-badge @Model.Lens.StockStatus.ToLower().Replace("stock", "-stock")">
                    @switch (Model.Lens.StockStatus)
                    {
                        case "InStock":
                            <i class="bi bi-check-circle-fill"></i>
                            <span>In Stock</span>
                            break;
                        case "LowStock":
                            <i class="bi bi-exclamation-circle-fill"></i>
                            <span>@Model.Lens.StockMessage</span>
                            break;
                        case "OutOfStock":
                            <i class="bi bi-x-circle-fill"></i>
                            <span>Out of Stock</span>
                            break;
                    }
                </div>

                <!-- Prescription Badge -->
                @if (Model.Lens.IsPrescription)
                {
                    <div class="prescription-info required">
                        <i class="bi bi-file-earmark-medical"></i>
                        <span>Prescription Required</span>
                    </div>
                }
                else
                {
                    <div class="prescription-info not-required">
                        <i class="bi bi-check2-circle"></i>
                        <span>No Prescription Needed</span>
                    </div>
                }

                <!-- Description Box -->
                @if (!string.IsNullOrEmpty(Model.Lens.Description))
                {
                    <div class="lens-description-box">
                        <p>@Model.Lens.Description</p>
                    </div>
                }

                <!-- Specifications -->
                <div class="specs-section">
                    <h3 class="specs-heading">Specifications</h3>
                    <div class="specs-table">
                        <div class="specs-row">
                            <span class="specs-label">Lens Type:</span>
                            <span class="specs-value">@(Model.Lens.LensType ?? "‚Äî")</span>
                        </div>
                        <div class="specs-row">
                            <span class="specs-label">Lens Index:</span>
                            <span class="specs-value">@(Model.Lens.LensIndex.HasValue? Model.Lens.LensIndex.Value.ToString("F2") : "‚Äî")</span>
                        </div>
                        <div class="specs-row">
                            <span class="specs-label">Prescription:</span>
                            <span class="specs-value">@(Model.Lens.IsPrescription ? "Required" : "Not Required")</span>
                        </div>
                    </div>
                </div>

                <!-- Add to Cart Form -->
                <form method="post" asp-page-handler="AddToCart" id="addToCartForm">
                    <input type="hidden" asp-for="AddToCartInput.ProductId" />
                    <input type="hidden" asp-for="AddToCartInput.PrescriptionId" id="selectedPrescriptionId" />

                    <div class="quantity-section">
                        <label class="quantity-label">Quantity</label>
                        <div class="quantity-input-wrapper">
                            <button type="button" class="quantity-btn" id="decreaseQty" onclick="decreaseQuantity()">
                                <i class="bi bi-dash"></i>
                            </button>
                            <input type="number" asp-for="AddToCartInput.Quantity"
                                   class="quantity-input" id="quantityInput"
                                   min="1" max="@(Model.Lens.InventoryQty ?? 10)"
                                   value="1" />
                            <button type="button" class="quantity-btn" id="increaseQty" onclick="increaseQuantity()">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                    </div>

                    <button type="button" class="btn-add-to-cart" id="btnAddToCart" @(Model.Lens.IsInStock ? "" : "disabled")>
                        @if (Model.Lens.IsInStock)
                        {
                            <i class="bi bi-cart-plus"></i>
                            <span>Add to Cart</span>
                        }
                        else
                        {
                            <i class="bi bi-cart-x"></i>
                            <span>Out of Stock</span>
                        }
                    </button>
                </form>

                @if (Model.Lens.IsPrescription)
                {
                    <div class="modal fade" id="addToCartPrescriptionModal" tabindex="-1" aria-labelledby="prescriptionModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="prescriptionModalLabel">Add prescription to this lens?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="text-muted small">Select a saved prescription or skip. +@Model.Lens.PrescriptionFee.ToString("N0") VND will be added for prescription.</p>
                                    <label class="form-label">Prescription</label>
                                    <select class="form-select" id="modalPrescriptionSelect">
                                        <option value="">No prescription</option>
                                        @foreach (var p in Model.Prescriptions)
                                        {
                                            <option value="@p.PrescriptionId">@(p.ProfileName ?? "Prescription")</option>
                                        }
                                    </select>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-primary" id="modalAddToCartConfirm">
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @* ‚îÄ‚îÄ Add to Wishlist: CH·ªà hi·ªán khi h·∫øt h√†ng ‚îÄ‚îÄ *@
                @if (!Model.Lens.IsInStock)
                {
                    <button type="button"
                            class="btn-add-wishlist"
                            id="wishlistBtn"
                            data-product-id="@Model.Lens.ProductId"
                            data-in-wishlist="false">
                        <i class="bi bi-heart"></i>
                        <span>Save to Wishlist ‚Äî Notify me when back</span>
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Tabs Section -->
    <div class="details-tabs-section">
        <div class="tabs-header">
            <button class="tab-button active" onclick="showTab('description')">Full Description</button>
            <button class="tab-button" onclick="showTab('specifications')">Specifications</button>
            <button class="tab-button" onclick="showTab('care')">Care Instructions</button>
        </div>

        <div id="tab-description" class="tab-content active">
            <h3>About This Lens</h3>
            <p>
                @if (!string.IsNullOrEmpty(Model.Lens.Description))
                {
                    @Model.Lens.Description
                }
                else
                {
                    <text>Discover exceptional clarity and comfort with this premium eyewear lens.</text>
                }
            </p>
        </div>

        <div id="tab-specifications" class="tab-content">
            <h3>Technical Specifications</h3>
            <div class="specs-table">
                <div class="specs-row">
                    <span class="specs-label">SKU:</span>
                    <span class="specs-value">@Model.Lens.Sku</span>
                </div>
                <div class="specs-row">
                    <span class="specs-label">Lens Type:</span>
                    <span class="specs-value">@(Model.Lens.LensType ?? "‚Äî")</span>
                </div>
                <div class="specs-row">
                    <span class="specs-label">Lens Index:</span>
                    <span class="specs-value">@(Model.Lens.LensIndex.HasValue? Model.Lens.LensIndex.Value.ToString("F2") : "‚Äî")</span>
                </div>
                <div class="specs-row">
                    <span class="specs-label">Prescription:</span>
                    <span class="specs-value">@(Model.Lens.IsPrescription ? "Required" : "Not Required")</span>
                </div>
            </div>
        </div>

        <div id="tab-care" class="tab-content">
            <h3>Care & Maintenance</h3>
            <ul class="care-list">
                @if (!string.IsNullOrEmpty(Model.Lens.CareInstructions))
                {
                    @foreach (var instruction in Model.Lens.CareInstructions.Split('.').Where(s => !string.IsNullOrWhiteSpace(s)))
                    {
                        <li>@instruction.Trim().</li>
                    }
                }
                else
                {
                    <li>Clean gently with a microfiber cloth and lens cleaning solution.</li>
                    <li>Store in the provided case when not in use.</li>
                    <li>Avoid touching the lens surface with fingers.</li>
                    <li>Keep away from harsh chemicals and extreme temperatures.</li>
                }
            </ul>
        </div>
    </div>

    <!-- Related Products Section -->
    @if (Model.Lens.RelatedProducts.Any())
    {
        <div class="related-products-section">
            <h2 class="related-heading">You May Also Like</h2>
            <div class="related-grid">
                @foreach (var related in Model.Lens.RelatedProducts)
                {
                    <a asp-page="/Products/LensDetails" asp-route-id="@related.ProductId" class="related-card-link">
                        <div class="related-card">
                            <div class="related-card-image">
                                @if (!string.IsNullOrEmpty(related.PrimaryImageUrl))
                                {
                                    <img src="@related.PrimaryImageUrl" alt="@related.Name" />
                                }
                                else
                                {
                                    <div class="related-card-image-placeholder">
                                        <i class="bi bi-eyeglasses"></i>
                                    </div>
                                }
                            </div>
                            <div class="related-card-info">
                                <h4 class="related-card-name">@related.Name</h4>
                                <p class="related-card-price">@related.Currency @related.Price.ToString("N0")</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    }

    <!-- Mobile Sticky Bar -->
    <div class="mobile-sticky-bar" id="mobileStickyBar">
        <div class="mobile-sticky-content">
            <div class="mobile-price">@Model.Lens.Currency @Model.Lens.Price.ToString("N0")</div>
            <button type="button" class="mobile-add-btn" onclick="submitAddToCart()" @(Model.Lens.IsInStock ? "" : "disabled")>
                @if (Model.Lens.IsInStock)
                {
                    <text><i class="bi bi-cart-plus"></i> Add to Cart</text>
                }
                else
                {
                    <text>Out of Stock</text>
                }
            </button>
        </div>
    </div>
}
else
{
    <div class="lens-details-container">
        <div class="empty-state" style="margin-top: 48px;">
            <div class="empty-state-icon"><i class="bi bi-exclamation-circle"></i></div>
            <h2>Product Not Found</h2>
            <p>The lens you're looking for doesn't exist or has been removed.</p>
            <a asp-page="/Products/Index" class="btn-clear-filters">
                <i class="bi bi-arrow-left"></i> Back to Shop
            </a>
        </div>
    </div>
}

@section Scripts {
    <script>
        // ‚îÄ‚îÄ Image Gallery ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        function changeMainImage(imageUrl, thumbnailElement) {
            const mainImage = document.getElementById('mainProductImage');
            if (mainImage) {
                mainImage.style.opacity = '0';
                setTimeout(() => { mainImage.src = imageUrl; mainImage.style.opacity = '1'; }, 150);
            }
            document.querySelectorAll('.thumbnail-item').forEach(t => t.classList.remove('active'));
            thumbnailElement.classList.add('active');
        }

        // ‚îÄ‚îÄ Quantity Selector ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        function decreaseQuantity() {
            const input = document.getElementById('quantityInput');
            const v = parseInt(input.value) || 1;
            if (v > 1) { input.value = v - 1; updateQuantityButtons(); }
        }

        function increaseQuantity() {
            const input = document.getElementById('quantityInput');
            const max = parseInt(input.max) || 10;
            const v = parseInt(input.value) || 1;
            if (v < max) { input.value = v + 1; updateQuantityButtons(); }
        }

        function updateQuantityButtons() {
            const input = document.getElementById('quantityInput');
            const v = parseInt(input.value) || 1;
            const max = parseInt(input.max) || 10;
            const dec = document.getElementById('decreaseQty');
            const inc = document.getElementById('increaseQty');
            if (dec) dec.disabled = v <= 1;
            if (inc) inc.disabled = v >= max;
        }

        document.getElementById('quantityInput')?.addEventListener('change', function () {
            const max = parseInt(this.max) || 10;
            let v = parseInt(this.value) || 1;
            if (v < 1) v = 1;
            if (v > max) v = max;
            this.value = v;
            updateQuantityButtons();
        });

        // ‚îÄ‚îÄ Tab Navigation ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
            document.getElementById('tab-' + tabName)?.classList.add('active');
            event.target.classList.add('active');
        }

        // ‚îÄ‚îÄ Mobile Sticky Bar ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        const stickyBar = document.getElementById('mobileStickyBar');
        window.addEventListener('scroll', function () {
            const formBottom = document.getElementById('addToCartForm')?.getBoundingClientRect().bottom || 0;
            if (window.innerWidth <= 991) {
                stickyBar.style.display = formBottom < 0 ? 'block' : 'none';
            }
        });

        function submitAddToCart() {
            if (prescriptionModal) {
                new bootstrap.Modal(prescriptionModal).show();
            } else {
                document.getElementById('addToCartForm').submit();
            }
        }

        // ‚îÄ‚îÄ Prescription Modal ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        const prescriptionModal = document.getElementById('addToCartPrescriptionModal');
        const addToCartForm = document.getElementById('addToCartForm');
        const btnAddToCart = document.getElementById('btnAddToCart');

        if (btnAddToCart) {
            btnAddToCart.addEventListener('click', function () {
                if (prescriptionModal) {
                    new bootstrap.Modal(prescriptionModal).show();
                } else {
                    addToCartForm.submit();
                }
            });
        }

        const modalConfirm = document.getElementById('modalAddToCartConfirm');
        if (modalConfirm && prescriptionModal) {
            modalConfirm.addEventListener('click', function () {
                const sel = document.getElementById('modalPrescriptionSelect');
                const hidden = document.getElementById('selectedPrescriptionId');
                if (hidden) hidden.value = sel ? (sel.value || '') : '';
                addToCartForm.submit();
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            updateQuantityButtons();
        });

        // ‚îÄ‚îÄ Wishlist Logic ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
        (async function initWishlist() {
            const btn = document.getElementById('wishlistBtn');
            if (!btn) return; // s·∫£n ph·∫©m c√≤n h√†ng ‚Üí kh√¥ng render n√∫t ‚Üí tho√°t

            const productId = parseInt(btn.dataset.productId);

            // N·∫øu ƒë√£ ƒëƒÉng nh·∫≠p, check xem ƒë√£ wishlist ch∆∞a ƒë·ªÉ highlight ƒë√∫ng tr·∫°ng th√°i
            @if (User.Identity?.IsAuthenticated == true)
            {
                    <text>
                    try {
                        const res = await fetch('/api/wishlist/my');
                        if (res.ok) {
                            const items = await res.json();
                            if (items.some(i => i.productId === productId)) {
                                setWishlistActive(btn, true);
                            }
                        }
                    } catch {}
                    </text>
            }

            btn.addEventListener('click', async function () {
                @if (User.Identity?.IsAuthenticated != true)
                {
                        <text>
                        window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                        return;
                        </text>
                }

                const isIn = btn.dataset.inWishlist === 'true';
                btn.disabled = true;

                try {
                    if (isIn) {
                        const res = await fetch('/api/wishlist/remove', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ productId })
                        });
                        if (res.ok) {
                            setWishlistActive(btn, false);
                            showWishlistToast('Removed from wishlist', 'ü§ç');
                        }
                    } else {
                        const res = await fetch('/api/wishlist/add', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ productId })
                        });
                        const data = await res.json();
                        if (res.ok) {
                            setWishlistActive(btn, true);
                            showWishlistToast("Saved! We'll email you when it's back ‚ù§Ô∏è", '‚ô°');
                        } else {
                            showWishlistToast(data.message || 'Something went wrong', '‚ö†Ô∏è');
                        }
                    }
                } catch {
                    showWishlistToast('Network error. Please try again.', '‚ö†Ô∏è');
                } finally {
                    btn.disabled = false;
                }
            });
        })();

        function setWishlistActive(btn, active) {
            btn.dataset.inWishlist = active ? 'true' : 'false';
            const icon = btn.querySelector('i');
            const text = btn.querySelector('span');
            if (active) {
                icon.className = 'bi bi-heart-fill';
                text.textContent = 'Saved to Wishlist ‚úì';
                btn.style.background = '#fffbf5';
                btn.style.borderColor = '#c9a96e';
                btn.style.color = '#a07840';
            } else {
                icon.className = 'bi bi-heart';
                text.textContent = 'Save to Wishlist ‚Äî Notify me when back';
                btn.style.background = '';
                btn.style.borderColor = '';
                btn.style.color = '';
            }
        }

        let _wlToastTimer;
        function showWishlistToast(msg, icon = '‚ô°') {
            let toast = document.getElementById('wl-toast-detail');
            if (!toast) {
                toast = document.createElement('div');
                toast.id = 'wl-toast-detail';
                toast.style.cssText = [
                    'position:fixed', 'bottom:28px', 'left:50%',
                    'transform:translateX(-50%) translateY(100px)',
                    'background:#0f0f0f', 'color:#fff', 'border-radius:12px',
                    'padding:12px 22px', 'font-size:13px', 'font-weight:500',
                    'display:flex', 'align-items:center', 'gap:8px',
                    'box-shadow:0 8px 28px rgba(0,0,0,0.22)', 'z-index:9999',
                    'white-space:nowrap',
                    'transition:transform .35s cubic-bezier(0.34,1.56,0.64,1)'
                ].join(';');
                document.body.appendChild(toast);
            }
            toast.innerHTML = `<span style="font-size:16px">${icon}</span>${msg}`;
            toast.style.transform = 'translateX(-50%) translateY(0)';
            clearTimeout(_wlToastTimer);
            _wlToastTimer = setTimeout(() => {
                toast.style.transform = 'translateX(-50%) translateY(100px)';
            }, 3000);
        }
    </script>
}
