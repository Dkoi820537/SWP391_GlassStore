@page "{id:int}/Delete"
@model EyewearStore_SWP391.Pages.Sale.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete Order";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Delete Confirmation Card -->
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Order Confirmation
                    </h4>
                </div>
                <div class="card-body text-center py-5">
                    <!-- Warning Icon -->
                    <div class="mb-4">
                        <i class="bi bi-trash display-1 text-danger"></i>
                    </div>

                    <!-- Order ID Badge -->
                    <div class="mb-4">
                        <span class="badge bg-danger fs-5 px-4 py-2">
                            Order #@Model.OrderId
                        </span>
                    </div>

                    <!-- Warning Message -->
                    <h5 class="text-danger mb-3">Are you sure you want to delete this order?</h5>

                    <div class="alert alert-warning mb-4" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>

                    <p class="text-muted mb-4">
                        This will permanently remove:
                    </p>

                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">
                            <i class="bi bi-x-circle text-danger me-2"></i>
                            <strong>Order record</strong>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-x-circle text-danger me-2"></i>
                            <strong>All order items</strong>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-x-circle text-danger me-2"></i>
                            <strong>Shipment information</strong>
                        </li>
                    </ul>

                    <!-- Action Form -->
                    <form method="post">
                        <input type="hidden" asp-for="OrderId" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg" id="deleteButton">
                                <i class="bi bi-trash3 me-2"></i>Yes, Delete Order
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>No, Go Back
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    <small>
                        <i class="bi bi-shield-exclamation me-1"></i>
                        This action is irreversible. Please proceed with caution.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Double confirmation for delete action
        document.getElementById('deleteButton').addEventListener('click', function(e) {
            e.preventDefault();

            if (confirm('⚠️ FINAL CONFIRMATION: Are you absolutely sure you want to delete Order #@Model.OrderId?\n\nThis action CANNOT be undone!')) {
                this.closest('form').submit();
            }
        });
    </script>
}

@section Styles {
    <style>
        .card {
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .btn-danger:hover {
            transform: scale(1.02);
            transition: all 0.2s ease;
        }
    </style>
}
