@page "{id:int}"
@model EyewearStore_SWP391.Pages.Sale.Orders.DetailsModel
@{
    ViewData["Title"] = $"Order #{Model.Order?.OrderId} - Details";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="d-flex justify-content-between mb-3">
        <h3>Order #@Model.Order.OrderId</h3>
        <div>
            <a class="btn btn-outline-secondary" asp-page="Index">Back</a>
            <a class="btn btn-primary" asp-page="Edit" asp-route-id="@Model.Order.OrderId">Edit</a>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <h5>Customer</h5>
            <p>
                <strong>@Model.Order.UserFullName</strong><br />
                @Model.Order.UserEmail<br />
                @(!string.IsNullOrWhiteSpace(Model.Order.UserPhone) ? $"Phone: {Model.Order.UserPhone}" : "")
            </p>

            <h5>Shipping address</h5>
            <p>@Model.Order.AddressLine</p>

            <h5>Order info</h5>
            <p>Status: <span class="badge bg-info text-dark">@Model.Order.Status</span></p>
            <p>Total: @String.Format("{0:N0}", Model.Order.TotalAmount)</p>
            <p>Payment: @Model.Order.PaymentMethod</p>
            <p>Created: @Model.Order.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>

            <div class="mt-3">
                <form method="post" asp-page-handler="ChangeStatus" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Order.OrderId" />
                    <select name="newStatus" class="form-select d-inline w-auto me-2">
                        @foreach (var s in Model.AllStatuses)
                        {
                            <option value="@s" selected="@(s == Model.Order.Status ? "selected" : null)">@s</option>
                        }
                    </select>
                    <button class="btn btn-success">Update Status</button>
                </form>

                @if (!string.IsNullOrWhiteSpace(Model.Order.TrackingNumber))
                {
                    <span class="ms-3">Tracking: <strong>@Model.Order.TrackingNumber</strong></span>
                }
            </div>
        </div>
    </div>

    <h5>Items</h5>
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Product</th>
                <th>SKU</th>
                <th class="text-end">Qty</th>
                <th class="text-end">Unit</th>
                <th>Snapshot</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in Model.Items)
            {
                <tr>
                    <td>@it.ProductName</td>
                    <td>@it.Sku</td>
                    <td class="text-end">@it.Quantity</td>
                    <td class="text-end">@String.Format("{0:N0}", it.UnitPrice)</td>
                    <td><pre style="white-space:pre-wrap">@it.SnapshotJson</pre></td>
                </tr>
            }
        </tbody>
    </table>
</div>