@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OptiPlus Eyewear</title>
    <meta name="description" content="Premium eyewear store offering quality glasses, frames, and lenses. Find your perfect style." />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EyewearStore_SWP391.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-optiplus">
            <div class="container">

                <a class="navbar-brand" asp-page="/Index">
                    OptiPlus
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Products">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#footer">Contact</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Orders/Index">My Orders</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-page="/Admin/Index">Admin</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @* Cart summary partial (badge + dropdown). Ensure Pages/Shared/_CartSummary.cshtml exists *@
                        @await Html.PartialAsync("_CartSummary")

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="me-2 avatar-inline" aria-hidden="true">👤</span>
                                    <span class="user-name">@User.Identity.Name</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end user-menu" aria-labelledby="userDropdown">
                                    <li class="px-3 py-2">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar rounded-circle d-flex align-items-center justify-content-center me-3">
                                                <span>👤</span>
                                            </div>

                                            <div class="user-meta">
                                                <div class="fw-bold user-fullname">@User.Identity.Name</div>
                                                <div class="text-muted small">Role: <span class="role-badge">@User.FindFirst(ClaimTypes.Role)?.Value</span></div>
                                            </div>
                                        </div>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-page="/Profile/Index">
                                            <span class="me-2">📝</span> Profile
                                        </a>
                                    </li>

                                    <li>
                                        <form method="post" asp-page="/Account/Logout" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link dropdown-item text-danger p-0 d-flex align-items-center" style="width:100%;">
                                                <span class="me-2">🚪</span> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">Login</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>