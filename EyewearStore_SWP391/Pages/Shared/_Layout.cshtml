@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OptiPlus Eyewear</title>
    <meta name="description" content="Premium eyewear store offering quality glasses, frames, and lenses. Find your perfect style." />

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (REQUIRED for Order Management pages) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EyewearStore_SWP391.styles.css" asp-append-version="true" />

    <!-- Page-specific Styles Section -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-optiplus">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="bi bi-eyeglasses me-2"></i>OptiPlus
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Products">
                                <i class="bi bi-shop me-1"></i>Shop
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#services">
                                <i class="bi bi-gear me-1"></i>Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#footer">
                                <i class="bi bi-envelope me-1"></i>Contact
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <!-- ✅ CHANGED: Updated link to point to Customer/MyOrders -->
                                <a class="nav-link text-dark" asp-page="/Customer/MyOrders">
                                    <i class="bi bi-box-seam me-1"></i>My Orders
                                </a>
                            </li>
                        }

                        @* Admin dropdown only visible to admin role *@
                        @if (User.IsInRole("admin") || User.IsInRole("sale"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-semibold" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock me-1"></i>
                                    @if (User.IsInRole("admin"))
                                    {
                                        <span>Admin</span>
                                    }
                                    else if (User.IsInRole("sale"))
                                    {
                                        <span>Sale</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="adminDropdown">
                                    @if (User.IsInRole("admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Index">
                                                <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }

                                    <li>
                                        <a class="dropdown-item" asp-page="/Sale/Orders/Index">
                                            <i class="bi bi-cart-check me-2"></i>Order Management
                                        </a>
                                    </li>

                                    @if (User.IsInRole("admin"))
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Staff">
                                                <i class="bi bi-people me-2"></i>Staff Management
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Operational">
                                                <i class="bi bi-clipboard-data me-2"></i>Operations
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Manager">
                                                <i class="bi bi-person-badge me-2"></i>Managers
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/AdminRole">
                                                <i class="bi bi-key me-2"></i>Admin Roles
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @await Html.PartialAsync("_CartSummary")

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="me-2 avatar-inline" aria-hidden="true">
                                        <i class="bi bi-person-circle fs-4"></i>
                                    </span>
                                    <span class="user-name">@User.Identity.Name</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end user-menu shadow" aria-labelledby="userDropdown">
                                    <li class="px-3 py-2">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                                 style="width: 50px; height: 50px;">
                                                <i class="bi bi-person-circle fs-3"></i>
                                            </div>

                                            <div class="user-meta">
                                                <div class="fw-bold user-fullname">@User.Identity.Name</div>
                                                <div class="text-muted small">
                                                    Role: <span class="badge bg-secondary">@User.FindFirst(ClaimTypes.Role)?.Value</span>
                                                </div>
                                            </div>
                                        </div>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-page="/Profile/Index">
                                            <i class="bi bi-person-lines-fill me-2"></i> My Profile
                                        </a>
                                    </li>

                                    <li>
                                        <!-- ✅ CHANGED: Updated link in dropdown menu too -->
                                        <a class="dropdown-item d-flex align-items-center" asp-page="/Customer/MyOrders">
                                            <i class="bi bi-box-seam me-2"></i> My Orders
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <form method="post" asp-page="/Account/Logout" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link dropdown-item text-danger p-0 d-flex align-items-center"
                                                    style="width:100%; text-decoration: none;">
                                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5" id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-eyeglasses me-2"></i>OptiPlus Eyewear</h5>
                    <p class="text-muted">Premium quality eyewear for everyone.</p>
                </div>
                <div class="col-md-4">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Products" class="text-white-50 text-decoration-none">Shop</a></li>
                        <li><a href="#services" class="text-white-50 text-decoration-none">Services</a></li>
                        <li><a href="#footer" class="text-white-50 text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Contact Us</h6>
                    <p class="text-muted mb-1"><i class="bi bi-envelope me-2"></i>info@optiplus.com</p>
                    <p class="text-muted mb-1"><i class="bi bi-telephone me-2"></i>+84 123 456 789</p>
                    <p class="text-muted"><i class="bi bi-geo-alt me-2"></i>Ho Chi Minh City, Vietnam</p>
                </div>
            </div>
            <hr class="bg-secondary">
            <div class="text-center text-muted">
                <small>&copy; @DateTime.Now.Year OptiPlus Eyewear. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Page-specific Scripts Section -->
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Global Toast Notification for TempData -->
    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                @if (TempData["Success"] != null)
                {
                                <text>
                                // Show success toast/alert
                                console.log('Success: @TempData["Success"]');
                                </text>
                }
                @if (TempData["Error"] != null)
                {
                                <text>
                                // Show error toast/alert
                                console.log('Error: @TempData["Error"]');
                                </text>
                }
            });
        </script>
    }
</body>
</html>
