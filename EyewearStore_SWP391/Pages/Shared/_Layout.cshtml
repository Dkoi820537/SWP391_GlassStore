@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OptiPlus Eyewear</title>
    <meta name="description" content="Premium eyewear store offering quality glasses, frames, and lenses. Find your perfect style." />

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (REQUIRED for Order Management pages) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EyewearStore_SWP391.styles.css" asp-append-version="true" />

    <!-- Page-specific Styles Section -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-optiplus">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="bi bi-eyeglasses me-2"></i>OptiPlus
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Products">
                                <i class="bi bi-shop me-1"></i>Shop
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#services">
                                <i class="bi bi-gear me-1"></i>Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#footer">
                                <i class="bi bi-envelope me-1"></i>Contact
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- ✅ MY PRESCRIPTIONS LINK -->
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-semibold" asp-page="/Customer/Prescriptions/Index" style="background: linear-gradient(135deg, rgba(156, 39, 176, 0.1) 0%, rgba(186, 104, 200, 0.1) 100%); border-radius: 6px; padding: 0.5rem 1rem;">
                                    <i class="bi bi-eyeglasses me-1"></i>My Prescriptions
                                </a>
                            </li>
                        }

                        @* ADMIN DROPDOWN — ONLY VISIBLE FOR ADMIN *@
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-semibold" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock me-1"></i>Admin
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Admin/Index">
                                            <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>

                                    <li class="dropdown-header text-muted small">Products</li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Lenses/Index">
                                            <i class="bi bi-eye me-2"></i>Lens Management
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Frames/Index">
                                            <i class="bi bi-eyeglasses me-2"></i>Frame Management
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item" asp-page="/Sale/Orders/Index">
                                            <i class="bi bi-cart-check me-2"></i>Order Management
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item" asp-page="/Support/Orders/Index">
                                            <i class="bi bi-people me-2"></i>Sale Staff
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Staff/Orders/Index">
                                            <i class="bi bi-people-fill me-2"></i>Staff
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Manager/Index">
                                            <i class="bi bi-person-badge me-2"></i>Managers
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item" asp-page="/Admin/Users/Index">
                                            <i class="bi bi-people me-2"></i>User Management
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-page="/Admin/AdminRole">
                                            <i class="bi bi-key me-2"></i>Admin Roles
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @await Html.PartialAsync("_CartSummary")

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="me-2 avatar-inline" aria-hidden="true">
                                        <i class="bi bi-person-circle fs-4"></i>
                                    </span>
                                    <span class="user-name">@User.Identity.Name</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end user-menu shadow" aria-labelledby="userDropdown" style="min-width: 280px;">
                                    <li class="px-3 py-2">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                                 style="width: 50px; height: 50px;">
                                                <i class="bi bi-person-circle fs-3"></i>
                                            </div>

                                            <div class="user-meta">
                                                <div class="fw-bold user-fullname">@User.Identity.Name</div>
                                                <div class="text-muted small">
                                                    Role: <span class="badge bg-secondary">@User.FindFirst(ClaimTypes.Role)?.Value</span>
                                                </div>
                                            </div>
                                        </div>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-page="/Profile/Index" style="padding: 0.75rem 1rem;">
                                            <i class="bi bi-person-lines-fill me-2 text-primary"></i>
                                            <span>My Profile</span>
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-page="/Customer/MyOrders" style="padding: 0.75rem 1rem;">
                                            <i class="bi bi-box-seam me-2 text-success"></i>
                                            <span>My Orders</span>
                                        </a>
                                    </li>

                                    <!-- ✅ MỚI: MY PRESCRIPTIONS TRONG DROPDOWN -->
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-page="/Customer/Prescriptions/Index" style="padding: 0.75rem 1rem; background: linear-gradient(135deg, rgba(156, 39, 176, 0.05) 0%, rgba(186, 104, 200, 0.05) 100%);">
                                            <i class="bi bi-eyeglasses me-2" style="color: #9c27b0;"></i>
                                            <span style="font-weight: 600; color: #9c27b0;">My Prescriptions</span>
                                            <span class="badge bg-purple ms-auto" style="background: linear-gradient(135deg, #9c27b0 0%, #ba68c8 100%);">New</span>
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <form method="post" asp-page="/Account/Logout" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link dropdown-item text-danger p-0 d-flex align-items-center"
                                                    style="width:100%; text-decoration: none; padding: 0.75rem 1rem !important;">
                                                <i class="bi bi-box-arrow-right me-2"></i>
                                                <span>Logout</span>
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <!-- Footer -->
    <footer class="footer-optiplus" id="footer">
        <div class="footer-container">
            <div class="footer-content">
                <div class="footer-brand">
                    <h3>OptiPlus</h3>
                    <p>
                        Your trusted destination for premium eyewear. 
                        We combine style, quality, and affordability to help you see the world better.
                    </p>
                    <div class="social-icons">
                        <a href="#" class="social-icon" aria-label="Facebook">
                            <svg viewBox="0 0 24 24">
                                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                            </svg>
                        </a>
                        <a href="#" class="social-icon" aria-label="Instagram">
                            <svg viewBox="0 0 24 24">
                                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                            </svg>
                        </a>
                        <a href="#" class="social-icon" aria-label="Twitter">
                            <svg viewBox="0 0 24 24">
                                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                            </svg>
                        </a>
                    </div>
                </div>
                <div class="footer-column">
                    <h4>Navigation</h4>
                    <ul>
                        <li><a href="/Index">Home</a></li>
                        <li><a href="/Products">Shop</a></li>
                        <li><a href="#services">Services</a></li>
                        <li><a href="/About">About Us</a></li>
                        <li><a href="#footer">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>Services</h4>
                    <ul>
                        <li><a href="#">Eye Exams</a></li>
                        <li><a href="#">Frame Fitting</a></li>
                        <li><a href="#">Lens Replacement</a></li>
                        <li><a href="#">Repairs</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>Contact Us</h4>
                    <ul>
                        <li><a href="mailto:info@optiplus.com">info@optiplus.com</a></li>
                        <li><a href="tel:+1234567890">+1 (234) 567-890</a></li>
                        <li><a href="#">123 Vision Street</a></li>
                        <li><a href="#">New York, NY 10001</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year OptiPlus. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Page-specific Scripts Section -->
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Global Toast Notification for TempData -->
    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                @if (TempData["Success"] != null)
                {
                        <text>
                        // Show success toast/alert
                        console.log('Success: @TempData["Success"]');
                        </text>
                }
                @if (TempData["Error"] != null)
                {
                        <text>
                        // Show error toast/alert
                        console.log('Error: @TempData["Error"]');
                        </text>
                }
            });
        </script>
    }
</body>
</html>
