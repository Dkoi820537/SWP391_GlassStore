@page
@model EyewearStore_SWP391.Pages.Staff.Orders.IndexModel
@{
    ViewData["Title"] = "Operations - Order Management";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                <li class="breadcrumb-item active">Operations</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 style="font-family: var(--font-secondary); color: var(--primary-navy); font-size: 2.5rem; margin-bottom: 0.5rem;">
                    🔧 Operations Dashboard
                </h1>
                <p style="color: var(--secondary-warm-gray); font-size: 1.1rem; margin: 0;">
                    Process orders, manage inventory, and handle shipments
                </p>
            </div>
            <button class="btn btn-primary" onclick="window.location.reload()">
                <span style="margin-right: 0.5rem;">🔄</span> Refresh
            </button>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 8px; border-left: 4px solid var(--success);">
            <strong>✓</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 8px; border-left: 4px solid var(--error);">
            <strong>⚠</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Cards (kept) -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card" style="border: none; border-radius: 12px; background: linear-gradient(135deg, #ff9800 0%, #ffc107 100%); color: white;">
                <div class="card-body">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <div style="font-size: 0.9rem; opacity: 0.9; margin-bottom: 0.25rem;">Pending</div>
                            <div style="font-size: 2rem; font-weight: 700;">@Model.Stats.PendingCount</div>
                        </div>
                        <div style="font-size: 3rem; opacity: 0.3;">⏳</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="border: none; border-radius: 12px; background: linear-gradient(135deg, #2196f3 0%, #03a9f4 100%); color: white;">
                <div class="card-body">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <div style="font-size: 0.9rem; opacity: 0.9; margin-bottom: 0.25rem;">Processing</div>
                            <div style="font-size: 2rem; font-weight: 700;">@Model.Stats.ProcessingCount</div>
                        </div>
                        <div style="font-size: 3rem; opacity: 0.3;">⚙️</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="border: none; border-radius: 12px; background: linear-gradient(135deg, #9c27b0 0%, #ba68c8 100%); color: white;">
                <div class="card-body">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <div style="font-size: 0.9rem; opacity: 0.9; margin-bottom: 0.25rem;">Prescription</div>
                            <div style="font-size: 2rem; font-weight: 700;">@Model.Stats.PrescriptionCount</div>
                        </div>
                        <div style="font-size: 3rem; opacity: 0.3;">👓</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="border: none; border-radius: 12px; background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%); color: white;">
                <div class="card-body">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <div style="font-size: 0.9rem; opacity: 0.9; margin-bottom: 0.25rem;">Today's Shipped</div>
                            <div style="font-size: 2rem; font-weight: 700;">@Model.Stats.ShippedTodayCount</div>
                        </div>
                        <div style="font-size: 3rem; opacity: 0.3;">📦</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search & Filters (unchanged, but ensure page resets to 1 on search/filter submit) -->
    <div class="card mb-4" style="border: none; border-radius: 12px; box-shadow: var(--shadow-md);">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label" style="font-weight: 600; color: var(--primary-navy);">
                        🔍 Search Orders
                    </label>
                    <input type="text"
                           class="form-control"
                           name="Search"
                           value="@Model.Search"
                           placeholder="Order ID, Email, or Name..."
                           style="border: 2px solid var(--medium-gray); border-radius: 8px; padding: 0.75rem;" />
                </div>

                <div class="col-md-2">
                    <label class="form-label" style="font-weight: 600; color: var(--primary-navy);">
                        📊 Status
                    </label>
                    <select class="form-select"
                            name="StatusFilter"
                            style="border: 2px solid var(--medium-gray); border-radius: 8px; padding: 0.75rem;">
                        <option value="">All Statuses</option>
                        @foreach (var s in Model.Statuses)
                        {
                            if (Model.StatusFilter == s)
                            {
                                <option value="@s" selected="selected">@s</option>
                            }
                            else
                            {
                                <option value="@s">@s</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label" style="font-weight: 600; color: var(--primary-navy);">
                        🏷️ Order Type
                    </label>
                    <select class="form-select"
                            name="TypeFilter"
                            style="border: 2px solid var(--medium-gray); border-radius: 8px; padding: 0.75rem;">
                        <option value="">All Types</option>
                        <option value="Prescription" selected="@(Model.TypeFilter == "Prescription")">Prescription Orders</option>
                        <option value="ReadyStock" selected="@(Model.TypeFilter == "ReadyStock")">Ready Stock</option>
                        <option value="PreOrder" selected="@(Model.TypeFilter == "PreOrder")">Pre-Orders</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label" style="font-weight: 600; color: var(--primary-navy);">
                        ⚡ Priority
                    </label>
                    <select class="form-select"
                            name="PriorityFilter"
                            style="border: 2px solid var(--medium-gray); border-radius: 8px; padding: 0.75rem;">
                        <option value="">All</option>
                        <option value="High" selected="@(Model.PriorityFilter == "High")">High Priority</option>
                        <option value="Normal" selected="@(Model.PriorityFilter == "Normal")">Normal</option>
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    @* Keep page size selection and submit button together: submit resets to page 1 *@
                    <input type="hidden" name="pageNumber" value="1" />
                    <select class="form-select me-2" name="pageSize" style="width: 120px;">
                        <option value="10" selected="@(Model.PageSize == 10)">10</option>
                        <option value="25" selected="@(Model.PageSize == 25)">25</option>
                        <option value="50" selected="@(Model.PageSize == 50)">50</option>
                    </select>
                    <button type="submit" class="btn btn-primary w-100" style="padding: 0.75rem;">
                        <span style="margin-right: 0.5rem;">🔍</span> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Orders Table Card -->
    <div class="card" style="border: none; border-radius: 12px; box-shadow: var(--shadow-lg);">
        <div style="background: linear-gradient(135deg, var(--primary-navy) 0%, var(--primary-navy-light) 100%);
                    padding: 1.5rem;
                    border-radius: 12px 12px 0 0;">
            <div class="d-flex justify-content-between align-items-center">
                <h5 style="color: white; margin: 0; font-weight: 600;">
                    📋 Orders Queue (@Model.TotalOrders orders)
                </h5>
                <div class="text-white small">
                    Showing <strong>@Model.FirstItemIndex</strong> - <strong>@Model.LastItemIndex</strong>
                    of <strong>@Model.TotalOrders</strong>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            @if (!Model.Orders.Any())
            {
                <div style="text-align: center; padding: 4rem 2rem;">
                    <div style="font-size: 4rem; opacity: 0.2; margin-bottom: 1rem;">📦</div>
                    <h4 style="color: var(--primary-navy); margin-bottom: 0.5rem;">No Orders Found</h4>
                    <p style="color: var(--secondary-warm-gray);">
                        All orders are processed! Or adjust your filters.
                    </p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" style="font-size: 0.95rem;">
                        <thead style="background: var(--light-gray);">
                            <tr>
                                <th style="padding: 1rem; font-weight: 600; color: var(--primary-navy);">Order</th>
                                <th style="padding: 1rem; font-weight: 600; color: var(--primary-navy);">Customer</th>
                                <th style="padding: 1rem; font-weight: 600; color: var(--primary-navy);">Created</th>
                                <th style="padding: 1rem; font-weight: 600; color: var(--primary-navy);">Status</th>
                                <th style="padding: 1rem; font-weight: 600; color: var(--primary-navy);">Type</th>
                                <th style="padding: 1rem; font-weight: 600; color: var(--primary-navy);">Shipment</th>
                                <th style="padding: 1rem; font-weight: 600; color: var(--primary-navy); text-align: right;">Total</th>
                                <th style="padding: 1rem; font-weight: 600; color: var(--primary-navy); text-align: center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model.Orders)
                            {
                                var isPrescription = o.OrderItems.Any(oi => oi.PrescriptionId != null);
                                var isPreOrder = o.OrderItems.Any(oi => (oi.Product?.InventoryQty ?? 0) < oi.Quantity);
                                var isHighPriority = isPrescription || o.CreatedAt < DateTime.UtcNow.AddDays(-2);

                                string badgeClass;
                                string badgeIcon;
                                switch (o.Status)
                                {
                                    case "Pending Confirmation":
                                        badgeClass = "bg-warning text-dark";
                                        badgeIcon = "⏳";
                                        break;
                                    case "Confirmed":
                                        badgeClass = "bg-info text-dark";
                                        badgeIcon = "✓";
                                        break;
                                    case "Processing":
                                        badgeClass = "bg-primary";
                                        badgeIcon = "⚙️";
                                        break;
                                    case "Shipped":
                                        badgeClass = "bg-secondary text-white";
                                        badgeIcon = "📦";
                                        break;
                                    case "Delivered":
                                        badgeClass = "bg-success";
                                        badgeIcon = "✅";
                                        break;
                                    case "Completed":
                                        badgeClass = "bg-success";
                                        badgeIcon = "🎉";
                                        break;
                                    case "Cancelled":
                                        badgeClass = "bg-danger";
                                        badgeIcon = "❌";
                                        break;
                                    default:
                                        badgeClass = "bg-secondary text-white";
                                        badgeIcon = "";
                                        break;
                                }

                                <tr style="border-bottom: 1px solid var(--medium-gray);">
                                    <td style="padding: 1rem;">
                                        <div style="font-weight: 700; color: var(--primary-navy); font-size: 1.1rem;">
                                            #@o.OrderId
                                        </div>
                                        @if (isHighPriority)
                                        {
                                            <span style="background: #ff5252; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.75rem; font-weight: 600;">
                                                🔥 HIGH
                                            </span>
                                        }
                                    </td>
                                    <td style="padding: 1rem;">
                                        <div style="font-weight: 600; color: var(--dark-gray);">
                                            @o.User?.FullName
                                        </div>
                                        <div style="font-size: 0.85rem; color: var(--secondary-warm-gray);">
                                            @o.User?.Email
                                        </div>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <div style="color: var(--dark-gray);">
                                            @o.CreatedAt.ToString("MMM dd, yyyy")
                                        </div>
                                        <div style="font-size: 0.85rem; color: var(--secondary-warm-gray);">
                                            @o.CreatedAt.ToString("hh:mm tt")
                                        </div>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <span class="badge @badgeClass" style="padding: 0.35rem 0.75rem; border-radius: 6px; font-weight: 600;">
                                            @badgeIcon @o.Status
                                        </span>
                                    </td>
                                    <td style="padding: 1rem;">
                                        @if (isPrescription)
                                        {
                                            <span style="background: #9c27b0; color: white; padding: 0.35rem 0.75rem; border-radius: 6px; font-weight: 600;">
                                                👓 Prescription
                                            </span>
                                        }
                                        else if (isPreOrder)
                                        {
                                            <span style="background: #607d8b; color: white; padding: 0.35rem 0.75rem; border-radius: 6px; font-weight: 600;">
                                                🕐 Pre-Order
                                            </span>
                                        }
                                        else
                                        {
                                            <span style="background: #4caf50; color: white; padding: 0.35rem 0.75rem; border-radius: 6px; font-weight: 600;">
                                                ✓ Ready Stock
                                            </span>
                                        }
                                    </td>
                                    <td style="padding: 1rem;">
                                        @if (o.Shipments != null && o.Shipments.Any())
                                        {
                                            var shipment = o.Shipments.FirstOrDefault();
                                            <div style="font-size: 0.85rem; color: var(--dark-gray);">
                                                📦 @(string.IsNullOrWhiteSpace(shipment?.TrackingNumber) ? "n/a" : shipment.TrackingNumber)
                                            </div>
                                            <div style="font-size: 0.75rem; color: var(--secondary-warm-gray);">
                                                @(string.IsNullOrWhiteSpace(shipment?.Carrier) ? "—" : shipment.Carrier)
                                            </div>
                                        }
                                        else
                                        {
                                            <span style="color: var(--secondary-warm-gray); font-size: 0.85rem;">—</span>
                                        }
                                    </td>
                                    <td style="padding: 1rem; text-align: right;">
                                        <div style="font-weight: 700; color: var(--primary-gold); font-size: 1.1rem;">
                                            @o.TotalAmount.ToString("N0") VND
                                        </div>
                                    </td>
                                    <td style="padding: 1rem; text-align: center;">
                                        <a asp-page="./Details"
                                           asp-route-id="@o.OrderId"
                                           class="btn btn-sm btn-primary"
                                           style="padding: 0.5rem 1.25rem; border-radius: 6px;">
                                            <span style="margin-right: 0.25rem;">👁️</span> Process
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination controls -->
                <div class="d-flex justify-content-between align-items-center p-3">
                    <div>
                        <small class="text-muted">Page @Model.PageNumber of @Model.TotalPages</small>
                    </div>

                    <nav aria-label="Orders pagination">
                        <ul class="pagination mb-0">
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="./Index"
                                   asp-route-pageNumber="1"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-Search="@Model.Search"
                                   asp-route-StatusFilter="@Model.StatusFilter"
                                   asp-route-TypeFilter="@Model.TypeFilter"
                                   asp-route-PriorityFilter="@Model.PriorityFilter">« First</a>
                            </li>

                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="./Index"
                                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-Search="@Model.Search"
                                   asp-route-StatusFilter="@Model.StatusFilter"
                                   asp-route-TypeFilter="@Model.TypeFilter"
                                   asp-route-PriorityFilter="@Model.PriorityFilter">‹ Prev</a>
                            </li>

                            @foreach (var p in Model.DisplayPageNumbers)
                            {
                                <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-page="./Index"
                                       asp-route-pageNumber="@p"
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-Search="@Model.Search"
                                       asp-route-StatusFilter="@Model.StatusFilter"
                                       asp-route-TypeFilter="@Model.TypeFilter"
                                       asp-route-PriorityFilter="@Model.PriorityFilter">@p</a>
                                </li>
                            }

                            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-page="./Index"
                                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-Search="@Model.Search"
                                   asp-route-StatusFilter="@Model.StatusFilter"
                                   asp-route-TypeFilter="@Model.TypeFilter"
                                   asp-route-PriorityFilter="@Model.PriorityFilter">Next ›</a>
                            </li>

                            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-page="./Index"
                                   asp-route-pageNumber="@Model.TotalPages"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-Search="@Model.Search"
                                   asp-route-StatusFilter="@Model.StatusFilter"
                                   asp-route-TypeFilter="@Model.TypeFilter"
                                   asp-route-PriorityFilter="@Model.PriorityFilter">Last »</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table tbody tr:hover {
        background-color: rgba(212, 165, 116, 0.05);
        transition: all 0.2s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    /* pagination look */
    .pagination .page-item .page-link {
        border-radius: 10px;
        margin: 0 3px;
        min-width: 44px;
        text-align: center;
        padding: 6px 10px;
    }

    .pagination .page-item.active .page-link {
        background: linear-gradient(90deg, #2b6cb0, #2c5282);
        border-color: #2c5282;
        color: #fff;
    }
</style>

@section Scripts {
    <script>
        // nothing needed here for paging (native anchor navigation)
    </script>
}