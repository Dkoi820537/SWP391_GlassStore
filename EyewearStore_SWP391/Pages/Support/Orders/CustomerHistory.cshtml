@page
@model EyewearStore_SWP391.Pages.Support.Orders.CustomerHistoryModel
@{
    ViewData["Title"] = "Customer Order History";
}

<div class="container py-4">
    <a asp-page="./Index" class="btn btn-link mb-3">&larr; Back to Support Queue</a>

    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Order History for @Model.CustomerName</h5>
        </div>
        <div class="card-body">
            @if (!Model.Orders.Any())
            {
                <div class="text-center text-muted py-4">
                    No orders found for this customer.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Created</th>
                                <th>Status</th>
                                <th>Items</th>
                                <th class="text-end">Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model.Orders)
                            {
                                <tr>
                                    <td>#@o.OrderId</td>
                                    <td>@o.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td><span class="badge @(o.Status == "Cancelled" ? "bg-warning text-dark" : "bg-secondary")">@o.Status</span></td>
                                    <td>@o.ItemCount</td>
                                    <td class="text-end">@String.Format("{0:N0} ₫", o.TotalAmount)</td>
                                    <td>
                                        <a asp-page="./Details" asp-route-id="@o.OrderId" class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>