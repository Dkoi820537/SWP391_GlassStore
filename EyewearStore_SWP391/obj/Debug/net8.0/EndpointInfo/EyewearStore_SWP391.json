{
  "openapi": "3.0.1",
  "info": {
    "title": "Eyewear Store API",
    "description": "A .NET 8 Web API for managing eyewear products including lenses, frames, and accessories",
    "contact": {
      "name": "Eyewear Store Support",
      "email": "support@eyewearstore.com"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Images/upload": {
      "post": {
        "tags": [
          "Images"
        ],
        "summary": "Uploads an image file and creates an Image record",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  },
                  "imageType": {
                    "type": "string",
                    "default": "product"
                  },
                  "context": {
                    "type": "string"
                  },
                  "altText": {
                    "type": "string"
                  }
                }
              },
              "encoding": {
                "file": {
                  "style": "form"
                },
                "imageType": {
                  "style": "form"
                },
                "context": {
                  "style": "form"
                },
                "altText": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/api/Images": {
      "get": {
        "tags": [
          "Images"
        ],
        "summary": "Gets images filtered by context",
        "parameters": [
          {
            "name": "context",
            "in": "query",
            "description": "Filter by context (e.g., \"lens:123\")",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "imageType",
            "in": "query",
            "description": "Filter by image type",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Images/{id}": {
      "get": {
        "tags": [
          "Images"
        ],
        "summary": "Gets an image by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The image ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Images"
        ],
        "summary": "Deletes an image (soft delete by setting IsActive to false)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The image ID to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Images/{id}/context": {
      "patch": {
        "tags": [
          "Images"
        ],
        "summary": "Updates an image's context (for linking to a lens after creation)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The image ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The new context value",
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "text/json": {
              "schema": {
                "type": "string"
              }
            },
            "application/*+json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Lenses": {
      "post": {
        "tags": [
          "Lenses"
        ],
        "summary": "Creates a new lens product",
        "requestBody": {
          "description": "The lens data to create",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateLensDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateLensDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateLensDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Returns the newly created lens",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LensResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "If the lens data is invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      },
      "get": {
        "tags": [
          "Lenses"
        ],
        "summary": "Gets all lenses with optional filtering, searching, sorting, and pagination",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search term for lens type or coating",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "lensType",
            "in": "query",
            "description": "Filter by lens type",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "coating",
            "in": "query",
            "description": "Filter by coating",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "priceMin",
            "in": "query",
            "description": "Minimum price filter",
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "priceMax",
            "in": "query",
            "description": "Maximum price filter",
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "stockStatus",
            "in": "query",
            "description": "Filter by stock status",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "description": "Sort field (price, lensType, createdAt)",
            "schema": {
              "type": "string",
              "default": "createdAt"
            }
          },
          {
            "name": "sortOrder",
            "in": "query",
            "description": "Sort order (asc, desc)",
            "schema": {
              "type": "string",
              "default": "desc"
            }
          },
          {
            "name": "pageNumber",
            "in": "query",
            "description": "Page number (default: 1)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Page size (default: 10, max: 100)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the list of lenses",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LensListResponseDto"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      }
    },
    "/api/Lenses/{id}": {
      "get": {
        "tags": [
          "Lenses"
        ],
        "summary": "Gets a single lens by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The lens ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the lens",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LensResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "If the lens is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      },
      "put": {
        "tags": [
          "Lenses"
        ],
        "summary": "Updates an existing lens product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The lens ID to update",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The updated lens data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateLensDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateLensDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateLensDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns the updated lens",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LensResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "If the lens data is invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "If the lens is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      },
      "delete": {
        "tags": [
          "Lenses"
        ],
        "summary": "Soft deletes a lens by setting StockStatus to \"out-of-stock\"",
        "description": "Note: The Lense model does not have an IsActive property.\r\nSoft delete is implemented by setting StockStatus to \"out-of-stock\".\r\nValid StockStatus values per DB constraint: \"in-stock\", \"low-stock\", \"out-of-stock\".",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The lens ID to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "The lens was successfully soft deleted"
          },
          "404": {
            "description": "If the lens is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateLensDto": {
        "required": [
          "lensType",
          "price"
        ],
        "type": "object",
        "properties": {
          "lensType": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "description": "The type of lens (e.g., Single Vision, Bifocal, Progressive)"
          },
          "indexValue": {
            "maximum": 2,
            "minimum": 1,
            "type": "number",
            "description": "The refractive index value of the lens (e.g., 1.50, 1.60, 1.67, 1.74)",
            "format": "double",
            "nullable": true
          },
          "coating": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "description": "The coating applied to the lens (e.g., Anti-Reflective, Blue Light Filter)",
            "nullable": true
          },
          "price": {
            "maximum": 999999999999,
            "minimum": 0.01,
            "type": "number",
            "description": "The price of the lens product",
            "format": "double"
          },
          "stockStatus": {
            "maxLength": 20,
            "minLength": 0,
            "pattern": "^(in-stock|low-stock|out-of-stock)$",
            "type": "string",
            "description": "The stock status of the lens. Valid values: \"in-stock\", \"low-stock\", \"out-of-stock\"",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Data Transfer Object for creating a new lens product"
      },
      "LensListResponseDto": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LensResponseDto"
            },
            "description": "The list of lens items for the current page",
            "nullable": true
          },
          "pageNumber": {
            "type": "integer",
            "description": "The current page number (1-indexed)",
            "format": "int32"
          },
          "pageSize": {
            "type": "integer",
            "description": "The number of items per page",
            "format": "int32"
          },
          "totalCount": {
            "type": "integer",
            "description": "The total number of items across all pages",
            "format": "int32"
          },
          "totalPages": {
            "type": "integer",
            "description": "The total number of pages",
            "format": "int32"
          },
          "hasPreviousPage": {
            "type": "boolean",
            "description": "Indicates whether there is a previous page",
            "readOnly": true
          },
          "hasNextPage": {
            "type": "boolean",
            "description": "Indicates whether there is a next page",
            "readOnly": true
          }
        },
        "additionalProperties": false,
        "description": "Data Transfer Object for paginated lens list responses"
      },
      "LensResponseDto": {
        "type": "object",
        "properties": {
          "lensId": {
            "type": "integer",
            "description": "The unique identifier of the lens",
            "format": "int32"
          },
          "lensType": {
            "type": "string",
            "description": "The type of lens (e.g., Single Vision, Bifocal, Progressive)",
            "nullable": true
          },
          "indexValue": {
            "type": "number",
            "description": "The refractive index value of the lens",
            "format": "double",
            "nullable": true
          },
          "coating": {
            "type": "string",
            "description": "The coating applied to the lens",
            "nullable": true
          },
          "price": {
            "type": "number",
            "description": "The price of the lens product",
            "format": "double"
          },
          "stockStatus": {
            "type": "string",
            "description": "The stock status of the lens",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "description": "The date and time when the lens was created",
            "format": "date-time"
          }
        },
        "additionalProperties": false,
        "description": "Data Transfer Object for returning lens product data"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "UpdateLensDto": {
        "required": [
          "lensType",
          "price"
        ],
        "type": "object",
        "properties": {
          "lensType": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "description": "The type of lens (e.g., Single Vision, Bifocal, Progressive)"
          },
          "indexValue": {
            "maximum": 2,
            "minimum": 1,
            "type": "number",
            "description": "The refractive index value of the lens (e.g., 1.50, 1.60, 1.67, 1.74)",
            "format": "double",
            "nullable": true
          },
          "coating": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "description": "The coating applied to the lens (e.g., Anti-Reflective, Blue Light Filter)",
            "nullable": true
          },
          "price": {
            "maximum": 999999999999,
            "minimum": 0.01,
            "type": "number",
            "description": "The price of the lens product",
            "format": "double"
          },
          "stockStatus": {
            "maxLength": 20,
            "minLength": 0,
            "pattern": "^(in-stock|low-stock|out-of-stock)$",
            "type": "string",
            "description": "The stock status of the lens. Valid values: \"in-stock\", \"low-stock\", \"out-of-stock\"",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Data Transfer Object for updating an existing lens product"
      }
    }
  }
}