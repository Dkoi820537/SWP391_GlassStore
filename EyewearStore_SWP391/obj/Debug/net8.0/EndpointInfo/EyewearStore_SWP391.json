{
  "openapi": "3.0.1",
  "info": {
    "title": "Eyewear Store API",
    "description": "A .NET 8 Web API for managing eyewear products including lenses, frames, and accessories",
    "contact": {
      "name": "Eyewear Store Support",
      "email": "support@eyewearstore.com"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Images/upload": {
      "post": {
        "tags": [
          "Images"
        ],
        "summary": "Uploads an image file and creates a ProductImage record",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  },
                  "productId": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "altText": {
                    "type": "string"
                  },
                  "isPrimary": {
                    "type": "boolean",
                    "default": false
                  },
                  "sortOrder": {
                    "type": "integer",
                    "format": "int32",
                    "default": 0
                  }
                }
              },
              "encoding": {
                "file": {
                  "style": "form"
                },
                "productId": {
                  "style": "form"
                },
                "altText": {
                  "style": "form"
                },
                "isPrimary": {
                  "style": "form"
                },
                "sortOrder": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/api/Images/product/{productId}": {
      "get": {
        "tags": [
          "Images"
        ],
        "summary": "Gets images for a specific product",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "description": "The product ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "activeOnly",
            "in": "query",
            "description": "Only return active images",
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Images/{id}": {
      "get": {
        "tags": [
          "Images"
        ],
        "summary": "Gets an image by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The image ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Images"
        ],
        "summary": "Deletes an image (soft delete by setting IsActive to false)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The image ID to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Images/{id}/set-primary": {
      "patch": {
        "tags": [
          "Images"
        ],
        "summary": "Sets an image as the primary image for its product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The image ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Lenses": {
      "post": {
        "tags": [
          "Lenses"
        ],
        "summary": "Creates a new lens product",
        "requestBody": {
          "description": "The lens data to create",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateLensDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateLensDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateLensDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Returns the newly created lens",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LensResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "If the lens data is invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      },
      "get": {
        "tags": [
          "Lenses"
        ],
        "summary": "Gets all lenses with optional filtering, searching, sorting, and pagination",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search term for name, description, or lens type",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "lensType",
            "in": "query",
            "description": "Filter by lens type",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "priceMin",
            "in": "query",
            "description": "Minimum price filter",
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "priceMax",
            "in": "query",
            "description": "Maximum price filter",
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "isActive",
            "in": "query",
            "description": "Filter by active status",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "isPrescription",
            "in": "query",
            "description": "Filter by prescription requirement",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "description": "Sort field (price, name, lensType, createdAt)",
            "schema": {
              "type": "string",
              "default": "createdAt"
            }
          },
          {
            "name": "sortOrder",
            "in": "query",
            "description": "Sort order (asc, desc)",
            "schema": {
              "type": "string",
              "default": "desc"
            }
          },
          {
            "name": "pageNumber",
            "in": "query",
            "description": "Page number (default: 1)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Page size (default: 10, max: 100)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the list of lenses",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LensListResponseDto"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      }
    },
    "/api/Lenses/{id}": {
      "get": {
        "tags": [
          "Lenses"
        ],
        "summary": "Gets a single lens by ID (ProductId)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The product ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the lens",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LensResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "If the lens is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      },
      "put": {
        "tags": [
          "Lenses"
        ],
        "summary": "Updates an existing lens product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The product ID to update",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The updated lens data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateLensDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateLensDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateLensDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns the updated lens",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LensResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "If the lens data is invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "If the lens is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      },
      "delete": {
        "tags": [
          "Lenses"
        ],
        "summary": "Soft deletes a lens by setting IsActive to false",
        "description": "Soft delete is implemented by setting IsActive to false.\r\nThe product will no longer appear in active product listings.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The product ID to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "The lens was successfully soft deleted"
          },
          "404": {
            "description": "If the lens is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateLensDto": {
        "required": [
          "currency",
          "name",
          "price",
          "sku"
        ],
        "type": "object",
        "properties": {
          "sku": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "description": "The SKU (Stock Keeping Unit) for the product"
          },
          "name": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string",
            "description": "The name of the lens product"
          },
          "description": {
            "type": "string",
            "description": "The description of the lens product",
            "nullable": true
          },
          "price": {
            "maximum": 999999999999.99,
            "minimum": 0.01,
            "type": "number",
            "description": "The price of the lens product",
            "format": "double"
          },
          "currency": {
            "maxLength": 3,
            "minLength": 3,
            "type": "string",
            "description": "The currency code (e.g., VND, USD)"
          },
          "inventoryQty": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "description": "The inventory quantity (optional)",
            "format": "int32",
            "nullable": true
          },
          "isActive": {
            "type": "boolean",
            "description": "Whether the product is active"
          },
          "lensType": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "description": "The type of lens (e.g., Single Vision, Bifocal, Progressive)",
            "nullable": true
          },
          "lensIndex": {
            "maximum": 2,
            "minimum": 1,
            "type": "number",
            "description": "The refractive index value of the lens (e.g., 1.50, 1.60, 1.67, 1.74)",
            "format": "double",
            "nullable": true
          },
          "isPrescription": {
            "type": "boolean",
            "description": "Whether this lens requires a prescription"
          }
        },
        "additionalProperties": false,
        "description": "Data Transfer Object for creating a new lens product"
      },
      "LensListResponseDto": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LensResponseDto"
            },
            "description": "The list of lens items for the current page",
            "nullable": true
          },
          "pageNumber": {
            "type": "integer",
            "description": "The current page number (1-indexed)",
            "format": "int32"
          },
          "pageSize": {
            "type": "integer",
            "description": "The number of items per page",
            "format": "int32"
          },
          "totalCount": {
            "type": "integer",
            "description": "The total number of items across all pages",
            "format": "int32"
          },
          "totalPages": {
            "type": "integer",
            "description": "The total number of pages",
            "format": "int32"
          },
          "hasPreviousPage": {
            "type": "boolean",
            "description": "Indicates whether there is a previous page",
            "readOnly": true
          },
          "hasNextPage": {
            "type": "boolean",
            "description": "Indicates whether there is a next page",
            "readOnly": true
          }
        },
        "additionalProperties": false,
        "description": "Data Transfer Object for paginated lens list responses"
      },
      "LensResponseDto": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "description": "The unique identifier of the product (ProductId)",
            "format": "int32"
          },
          "sku": {
            "type": "string",
            "description": "The SKU (Stock Keeping Unit) for the product",
            "nullable": true
          },
          "name": {
            "type": "string",
            "description": "The name of the lens product",
            "nullable": true
          },
          "description": {
            "type": "string",
            "description": "The description of the lens product",
            "nullable": true
          },
          "price": {
            "type": "number",
            "description": "The price of the lens product",
            "format": "double"
          },
          "currency": {
            "type": "string",
            "description": "The currency code",
            "nullable": true
          },
          "inventoryQty": {
            "type": "integer",
            "description": "The inventory quantity",
            "format": "int32",
            "nullable": true
          },
          "isActive": {
            "type": "boolean",
            "description": "Whether the product is active"
          },
          "createdAt": {
            "type": "string",
            "description": "The date and time when the lens was created",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "description": "The date and time when the lens was last updated",
            "format": "date-time"
          },
          "lensType": {
            "type": "string",
            "description": "The type of lens (e.g., Single Vision, Bifocal, Progressive)",
            "nullable": true
          },
          "lensIndex": {
            "type": "number",
            "description": "The refractive index value of the lens",
            "format": "double",
            "nullable": true
          },
          "isPrescription": {
            "type": "boolean",
            "description": "Whether this lens requires a prescription"
          },
          "primaryImageUrl": {
            "type": "string",
            "description": "Primary image URL for the product",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Data Transfer Object for returning lens product data"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "UpdateLensDto": {
        "required": [
          "currency",
          "name",
          "price",
          "sku"
        ],
        "type": "object",
        "properties": {
          "sku": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "description": "The SKU (Stock Keeping Unit) for the product"
          },
          "name": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string",
            "description": "The name of the lens product"
          },
          "description": {
            "type": "string",
            "description": "The description of the lens product",
            "nullable": true
          },
          "price": {
            "maximum": 999999999999.99,
            "minimum": 0.01,
            "type": "number",
            "description": "The price of the lens product",
            "format": "double"
          },
          "currency": {
            "maxLength": 3,
            "minLength": 3,
            "type": "string",
            "description": "The currency code (e.g., VND, USD)"
          },
          "inventoryQty": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "description": "The inventory quantity (optional)",
            "format": "int32",
            "nullable": true
          },
          "isActive": {
            "type": "boolean",
            "description": "Whether the product is active"
          },
          "lensType": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "description": "The type of lens (e.g., Single Vision, Bifocal, Progressive)",
            "nullable": true
          },
          "lensIndex": {
            "maximum": 2,
            "minimum": 1,
            "type": "number",
            "description": "The refractive index value of the lens (e.g., 1.50, 1.60, 1.67, 1.74)",
            "format": "double",
            "nullable": true
          },
          "isPrescription": {
            "type": "boolean",
            "description": "Whether this lens requires a prescription"
          }
        },
        "additionalProperties": false,
        "description": "Data Transfer Object for updating an existing lens product"
      }
    }
  }
}